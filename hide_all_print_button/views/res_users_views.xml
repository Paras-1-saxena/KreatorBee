  <record id="stock.action_print_labels" model="ir.actions.server">
    <field name="name">Labels</field>
    <field name="model_id" ref="stock.model_stock_picking"/>
    <field name="binding_model_id" ref="stock.model_stock_picking"/>
    <field name="binding_view_types">list,form</field>
    <field name="binding_type">report</field>
    <field name="state">code</field>
    <field name="code">
if records and all(rec.state != 'draft' for rec in records):
    action = records.action_open_label_type()
else:
    raise UserError("You cannot print labels for records in the 'draft' state.")
    </field>
</record>

