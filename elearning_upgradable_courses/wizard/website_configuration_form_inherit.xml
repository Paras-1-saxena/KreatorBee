<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="res_config_settings_view_form_unblock_cookie" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.unblock.cookie</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='website_cookies_bar_setting']/div[hasclass('content-group')]/div[hasclass('mt4')]"
                   position="after">
                <div class="mt4">
                    <button type="object" name="action_open_unblocked_third_party_domains"
                            string="Add domains to the Un-block list" class="btn-link"
                            icon="fa-ban" noSaveDialog="true"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>