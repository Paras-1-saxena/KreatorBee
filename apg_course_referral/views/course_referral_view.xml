<odoo>
    <!-- Terms and Conditions -->
    <record id="view_apg_course_referral_form" model="ir.ui.view">
        <field name="name">Course Referral</field>
        <field name="model">apg.course.referral</field>
        <field name="arch" type="xml">
            <form string="Course Referral">
                <sheet>
                    <header>
                        <button name="generate_referral_link" type="object" string="Generate Referral" class="oe_stat_button"/>
                    </header>
                    <group>
                        <field name="course_id" readonly="1" force_save="1"/>
                        <field name="website_url" readonly="1" force_save="1"/>
                        <field name="partner_id" readonly="1" force_save="1"/>
                        <field name="generated_url" readonly="1" force_save="1"/>
                        <field name="order_id" readonly="1" force_save="1"/>
                        <field name="payment_link" readonly="1" force_save="1"/>
                        <field name="expiry_time" readonly="1" force_save="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_apg_course_referral_tree" model="ir.ui.view">
        <field name="name">course terms and conditions</field>
        <field name="model">apg.course.referral</field>
        <field name="arch" type="xml">
            <list string="Course Referral">
                <field name="course_id"/>
                <field name="partner_id"/>
                <field name="generated_url"/>
                <field name="expiry_time"/>
            </list>
        </field>
    </record>

    <record id="action_apg_course_referral" model="ir.actions.act_window">
        <field name="name">Course Referral</field>
        <field name="res_model">apg.course.referral</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Content Tag
            </p>
        </field>
    </record>

    <record id="view_apg_course_referral_tracker_tree" model="ir.ui.view">
        <field name="name">Referral Tracking Tree</field>
        <field name="model">referral.tracker</field>
        <field name="arch" type="xml">
            <list string="Course Referral Tracking" editable="bottom">
                <field name="name" readonly="1"/>
                <field name="course" readonly="1"/>
                <field name="variant" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="action_apg_course_referral_tracking" model="ir.actions.act_window">
        <field name="name">Course Referral Tracking Action</field>
        <field name="res_model">referral.tracker</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Content Tag
            </p>
        </field>
    </record>

    <menuitem 
        id="website_slides_menu_apg_course_referral" 
        name="Course Referral"
        parent="website_slides.website_slides_menu_configuration"
        sequence="58"
        action="action_apg_course_referral"/>

    <menuitem
        id="website_slides_menu_apg_course_referral_tracking"
        name="Course Referral Tracking"
        parent="website_slides.website_slides_menu_configuration"
        sequence="100"
        action="action_apg_course_referral_tracking"/>
</odoo>

