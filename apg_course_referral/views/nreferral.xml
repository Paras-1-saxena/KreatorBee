<odoo>
    <data>
        <template id="nreferral_link_page" name="NReferral Link Page">
            <head>
                <!-- meta tags -->
                <meta charset="UTF-8" />
                <meta name="viewport" content="width=device-width, initial-scale=1.0" />
                <!-- title -->
                <title>Kreator Bee | Sales</title>
                <!-- external css -->
                <link rel="stylesheet" href="/apg_course_referral/static/src/css/custom_styl.css" />
                <!-- bootstrap css -->
                <link
                    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                    rel="stylesheet"
                    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                    crossorigin="anonymous"
                />
                <!-- remix icon -->
                <link
                    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
                    rel="stylesheet"
                />
                <style>
                    .sidebar ul li,header a {
                    font-size:17px;
                    }
                    .sidebar {
                    width:auto;
                    }
                    .links form {
                    width: 100%;
                    border: 2px solid #ffdb37;
                    background-color: rgba(253, 228, 114, 0.6);
                    border-radius: 10px;
                    }
                </style>
            </head>

            <body>
                <div class="layout">
                    <!-- Header -->
                    <header class="container-fluid">
                        <div
                            class="d-flex justify-content-between align-items-center border-bottom"
                        >
                            <!-- Menu Icon visible on mobile-->
                            <img
                                class="pe-2 d-block d-lg-none hamburger"
                                src="/custom_web_kreator/static/src/nev-icon.svg"
                            />
                            <!-- Logo -->
                            <img src="/custom_web_kreator/static/src/logo.png" />
                            <!-- Menu-->
                            <div class="d-lg-flex d-none gap-4">
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/master_income_data" class='text-center'>
                                        <i class="ri-line-chart-fill"></i>
                                        <p>
                                            Income Data
                                        </p>
                                    </a>
                                </div>
                                <div class="active p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/nreferral" class='text-center'>
                                        <i class="ri-links-fill"></i>
                                        <p>
                                            Links
                                        </p>
                                    </a>
                                </div>
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/nkyc" class='text-center'>
                                        <i class="ri-profile-fill"></i>
                                        <p>
                                            KYC
                                        </p>
                                    </a>
                                </div>
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/creator-lead" class='text-center'>
                                        <i class="ri-megaphone-fill"></i>
                                        <p>
                                            Lead
                                        </p>
                                    </a>
                                </div>
                                <div
                                    class="p-lg-2 p-1 d-flex flex-column align-items-center"
                                >
                                    <a href="/nleaderboard" class='text-center'>
                                        <i class="ri-award-fill"></i>
                                        <p>
                                            Leaderboard
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <!-- Profile -->
                            <t t-call="custom_web_kreator.partner_profile_dropdown" />
                        </div>
                    </header>

                    <div class="d-flex w-100">
                        <!-- Sidebar -->
                        <div class="sidebar border-end d-none d-lg-block">
                            <nav class="py-3 px-2">
                                <!-- Sidebar Menu -->
                                <ul class="d-flex flex-column gap-2">
                                    <li>
                                        <a href="/master"><i class="ri-dashboard-fill"></i> Get
                                            Started</a>
                                    </li>
                                    <li class="active">
                                        <a href="/master_income_data"><i
                                                class="ri-discount-percent-fill"></i> Sales</a>
                                    </li>
                                    <!-- Sales Dropdown -->
                                    <div class="ps-2 d-block d-lg-none">
                                        <li>
                                            <a href="/master_income_data"><i
                                                    class="ri-subtract-fill"></i> Income Data</a>
                                        </li>
                                        <li>
                                            <a href="/nreferral"><i class="ri-subtract-fill"></i>
                                                Links</a>
                                        </li>
                                        <li>
                                            <a href="/nkyc"><i class="ri-subtract-fill"></i> kyc</a>
                                        </li>
                                        <li>
                                            <i class="ri-subtract-fill"></i>
                                            <a href="/creator-lead">Lead</a>
                                        </li>
                                        <li>
                                            <a href="/nleaderboard"><i
                                                    class="ri-subtract-fill"></i> Leaderboard</a>
                                        </li>
                                    </div>
                                    <li>
                                        <a href="/nmy-courses"><i class="ri-product-hunt-fill"></i>
                                            Products</a>
                                    </li>
                                    <li>
                                        <a href="/forumsection"><i class="ri-user-community-fill"></i>
                                            Connect with Partner</a>
                                    </li>
                                    <li>
                                        <i class="ri-user-fill"></i>
                                        <a href="/coming-soon"> Customer</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="ri-user-community-fill"></i> Become a
                                            Bee Partner</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>

                        <!-- Sidebar Backdrop on mobile -->
                        <div class="backdrop d-none d-lg-none"></div>

                        <!-- Main Content -->
                        <main class="flex-grow-1 p-4 overflow-auto">
                            <!-- Welcome Section -->
                            <section class="welcome">
                                <div
                                    class="d-flex gap-2 flex-column flex-lg-row align-items-lg-center justify-content-between"
                                >
                                    <h1 class="d-flex align-items-center gap-1">
                                        <img class="play"
                                            src="/custom_web_kreator/static/src/user_icon.svg" />
                                        Welcome, <t t-esc="request.env.user.name" />
                                    </h1>
                                    <div class="d-flex gap-3 align-items-center">
                                        <a
                                            href="https://www.youtube.com/embed/GYsHQ3L2aG0?si=PxeJgCHMW-mu_sgP"
                                        >
                                            Tutorial <img class="ms-1"
                                                src="/custom_web_kreator/static/src/play.png"
                                            /></a>
                                        <a href="https://wa.me/1234567890"
                                        ><img
                                                src="/custom_web_kreator/static/src/Whatsapp.png" />
                                            +1234567890</a>
                                    </div>
                                </div>
                            </section>
                            <!--Link
                            Section -->
                            <section
                                class="links h-100 px-lg-5 d-flex justify-content-center align-items-center">
                                <!-- Link Section -->
                                <div class="row g-5 w-100">
                                    <div class="col-lg-6 col-12 flex-grow-1">
                                        <form class="p-3 d-flex flex-column gap-4">
                                            <div class="d-flex flex-column gap-1">
                                                <label class="mb-3">Referral Link</label>
                                                <div class="d-flex flex-column gap-3">
                                                    <select class="w-75">
                                                        <option>All Courses</option>
                                                        <option>Marketing and above</option>
                                                        <option>Branding and above</option>
                                                        <option>Traffic and above</option>
                                                        <option>Influence and above</option>
                                                        <option>Finance Mastery and Business Mastery</option>
                                                    </select>
                                                    <select class="w-75">
                                                        <option>No Limit</option>
                                                        <option>1 Day</option>
                                                        <option>7 Days</option>
                                                        <option>30 Days</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-column gap-1">
                                                <label class="mb-3">Generated Link</label>
                                                <input
                                                    class="w-75"
                                                    type="text"
                                                    readonly="readonly"
                                                    value="https://www.bizgurukul.com/Signup?id=cbcDJ7DVHoQ&gt;ref=BGbh/Jf$+jbdjlL+ohZsSg=="
                                                />
                                                <div class="mt-2">
                                                    <button>Generate Link</button>
                                                    <span>
                                                        <i class="ri-file-copy-line"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-lg-6 col-12 flex-grow-1">
                                        <form class="p-3 d-flex flex-column gap-4">
                                            <div class="d-flex flex-column gap-1">
                                                <label class="mb-3">Payment Link</label>
                                                <div class="d-flex flex-column gap-3">
                                                    <select class="w-75">
                                                        <option>All Courses</option>
                                                        <option>Marketing and above</option>
                                                        <option>Branding and above</option>
                                                        <option>Traffic and above</option>
                                                        <option>Influence and above</option>
                                                        <option>Finance Mastery and Business Mastery</option>
                                                    </select>
                                                    <select class="w-75">
                                                        <option>No Limit</option>
                                                        <option>1 Day</option>
                                                        <option>7 Days</option>
                                                        <option>30 Days</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-column gap-1">
                                                <label class="mb-3">Generated Link</label>
                                                <input
                                                    class="w-75"
                                                    type="text"
                                                    readonly="readonly"
                                                    value="https://www.bizgurukul.com/Signup?id=cbcDJ7DVHoQ&gt;ref=BGbh/Jf$+jbdjlL+ohZsSg=="
                                                />
                                                <div class="mt-2">
                                                    <button>Generate Link</button>
                                                    <span>
                                                        <i class="ri-file-copy-line"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </section>
                        </main>
                    </div>
                </div>
                <!-- External Script -->
                <script src="/apg_course_referral/static/src/js/script.js"></script>
                <!-- bootstrap script -->
                <script
                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                    crossorigin="anonymous"
                ></script>
            </body>
        </template>
    </data>
</odoo>