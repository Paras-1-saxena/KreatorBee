<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Cron Job: To check close date  -->
    <record id="close_limit_cron" model="ir.cron">
        <field name="name">Check Close Limit</field>
        <field name="model_id" ref="model_subscription_package"/>
        <field name="state">code</field>
        <field name="code">model.close_limit_cron()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
    </record>

    <record id="ir_cron_free_subscription_portal_users" model="ir.cron">
        <field name="name">Auto Create Free Subscription for Portal Users</field>
        <field name="model_id" ref="model_subscription_package"/>
        <field name="state">code</field>
        <field name="code">model._cron_create_free_subscription_for_portal_users()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
    </record>

    <!--  Cron Job: To close Subscription  -->
    <record id="close_subscription_cron" model="ir.cron">
        <field name="name">Close Subscription</field>
        <field name="model_id" ref="model_subscription_package"/>
        <field name="state">code</field>
        <field name="code">model._close_subscription()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
    </record>

    <!--  Cron Job: To Start Subscription  -->
    <record id="start_subscription_cron" model="ir.cron">
        <field name="name">Start Subscription</field>
        <field name="model_id" ref="model_subscription_package"/>
        <field name="state">code</field>
        <field name="code">model._start_subscription()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
    </record>
</odoo>
