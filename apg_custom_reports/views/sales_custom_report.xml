<odoo>
    <record id="view_sale_custom_report_wizard_form" model="ir.ui.view">
        <field name="name">sale.custom.report.wizard.form</field>
        <field name="model">sale.custom.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Report">
                <group>
                    <group>
                        <field name="customer_partner_id"/>
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <group>
                        <field name="sponsor_partner_id"/>
                        <field name="joined_from"/>
                        <field name="joined_to"/>
                        
                    </group>
                </group>
                <footer>
                    <button name="action_download_report" string="Download Report" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_custom_report_wizard" model="ir.actions.act_window">
        <field name="name">Sales Report Wizard</field>
        <field name="res_model">sale.custom.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
