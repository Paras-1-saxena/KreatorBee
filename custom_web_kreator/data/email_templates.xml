<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Email Template for Agree -->
    <record id="email_template_course_agree" model="mail.template">
        <field name="name">Course Creation - Agreement Accepted</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="subject">Thank You for Creating The Course!</field>
        <field name="email_from">info@kreatorbee.in</field>
        <field name="email_to">{{ object.partner_id.email }}</field>
        <field name="body_html"><![CDATA[
            <p>Dear <t t-out="object.partner_id.name"/></p>
            <p>Thank you for creating the course.</p>
            <p>Our team will review your submission, and you will receive a notification once it is approved.</p>
            <p>Best regards,</p>
            <p>Your Team</p>
        ]]></field>
    </record>

    <!-- Email Template for Disagree -->
    <record id="email_template_course_disagree" model="mail.template">
        <field name="name">Course Creation - Agreement Declined</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="subject">Sorry to hear that you do not agree</field>
        <field name="email_from">info@kreatorbee.in</field>
        <field name="email_to">{{ object.partner_id.email }}</field>
        <field name="body_html"><![CDATA[
            <p>Dear <t t-out="object.partner_id.name"/></p>

            <p>We're sorry to hear that you do not agree with our terms and conditions</p>

            <p>If you have any concerns or feedback, please feel free to reach out.</p>

            <p>Best regards,</p>
            <p>Your Team</p>
        ]]></field>
    </record>
</odoo>