                                        <script>
    document.getElementById("course_search").addEventListener("input", function () {
        try {
            let query = this.value;
            fetch('/course/search', {  
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    params: {
                        query: query,
                    }
                })
            })
            .then(response => response.json())
            .then(data => {
                if (!data.result || !Array.isArray(data.result)) {
                    console.error("Unexpected response format:", data);
                    return;
                }

                let resultsList = document.getElementById("search_results");
                resultsList.innerHTML = ""; 

                if (data.result.length === 0) {
                    resultsList.style.display = "none"; 
                    return;
                } else {
                    resultsList.style.display = "block"; 
                }

                data.result.forEach(course => {
                    let listItem = document.createElement("li");
                    listItem.classList.add("search-item");
                    listItem.dataset.courseId = course.id;
                    listItem.textContent = course.name;

                    listItem.addEventListener("click", function() {
                        window.location.href = `/partner/product?course_id=${this.dataset.courseId}`;
                    });

                    resultsList.appendChild(listItem);
                });
            });
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to fetch courses.');
        }
    });

    document.getElementById("course_search").addEventListener("keypress", function (event) {
        let search = this.value.trim(); 

        if (event.key === "Enter") {
            event.preventDefault(); 

            if (search) {  
                window.location.href = `/partner/product?name=${encodeURIComponent(search)}`;
            }
        }
    });

    // Hide search results when scrolling
    window.addEventListener("scroll", function () {
        document.getElementById("search_results").style.display = "none";
    });

    // Also hide when clicking outside the search box
    document.addEventListener("click", function (event) {
        let searchBox = document.getElementById("course_search");
        let resultsList = document.getElementById("search_results");

        if (!searchBox.contains(event.target)){
            if (!resultsList.contains(event.target)) {
                resultsList.style.display = "none";
            }
        }
    });
</script>



