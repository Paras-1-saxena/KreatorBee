                    <script>
                        // Select the buttons
                        const unverifiedOrdersBtnForCreator = document.getElementById('unverifiedOrdersBtnForCreator');
                        const visitorsBtnForCreator = document.getElementById('visitorsBtnForCreator');

                        // Select the content containers (tables)
                        const unverifiedOrdersTableForCreator = document.getElementById('unverifiedOrdersTableForCreator');
                        const visitorsTableForCreator = document.getElementById('visitorsTableForCreator');


                        // Function to toggle the active class and table visibility
                        function switchActive(buttonToActivate) {
                        // Remove 'active' class from both buttons
                        unverifiedOrdersBtnForCreator.classList.remove('active');
                        visitorsBtnForCreator.classList.remove('active');

                        // Add 'active' class to the clicked button
                        buttonToActivate.classList.add('active');

                        // Show/Hide the respective tables
                        if (buttonToActivate === unverifiedOrdersBtnForCreator) {
                        unverifiedOrdersTableForCreator.style.display = 'block';
                        visitorsTableForCreator.style.display = 'none';
                        } else if (buttonToActivate === visitorsBtnForCreator) {
                        unverifiedOrdersTableForCreator.style.display = 'none';
                        visitorsTableForCreator.style.display = 'block';
                        }
                        }

                        // Add event listeners to the buttons
                        unverifiedOrdersBtnForCreator.addEventListener('click', () => {
                        switchActive(unverifiedOrdersBtnForCreator);
                        });

                        visitorsBtnForCreator.addEventListener('click', () => {
                        switchActive(visitorsBtnForCreator);
                        });

                        // Initialize by displaying unverifiedOrdersTableForCreator and hiding visitorsTableForCreator
                        unverifiedOrdersTableForCreator.style.display = 'block';
                        visitorsTableForCreator.style.display = 'none';
                    </script>
