<odoo>
    <data>
        <template id="creator_lead" name="Creator Lead Template">
            <head>
                <!-- meta tags -->
                <meta charset="UTF-8" />
                <meta name="viewport" content="width=device-width, initial-scale=1.0" />
                <!-- title -->
                <title>Kreator Bee | Sales</title>
                <!-- external css -->
                <link rel="stylesheet" href="/custom_web_kreator/static/src/css/custom_styl.css" />
                <!-- bootstrap css -->
                <link
                    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                    rel="stylesheet"
                    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                    crossorigin="anonymous"
                />
                <!-- remix icon -->
                <link
                    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
                    rel="stylesheet"
                />
                <style>
                    .sidebar ul li,header a {
                    font-size:17px;
                    }
                    .sidebar {
                    width:auto;
                    }
                    #unverifiedOrdersTableForCreator,
                    #visitorsTableForCreator {
                    transition: opacity 0.3s ease-in-out;
                    }

                </style>
            </head>

            <body>
                <div class="layout">
                    <!-- Header -->
                    <header class="container-fluid">
                        <div
                            class="d-flex justify-content-between align-items-center border-bottom"
                        >
                            <!-- Menu Icon visible on mobile-->
                            <img
                                class="pe-2 d-block d-lg-none hamburger"
                                src="/custom_web_kreator/static/src/nev-icon.svg"
                            />
                            <!-- Logo -->
                            <img src="/custom_web_kreator/static/src/logo.png" />
                            <!-- Menu-->
                            <div class="d-lg-flex d-none gap-4">
                                <div
                                    class="p-lg-2 p-1 d-flex flex-column align-items-center"
                                >
                                    <a href="/master_income_data" class='text-center'>
                                        <i class="ri-line-chart-fill"></i>
                                        <p>
                                            Income Data
                                        </p>
                                    </a>
                                </div>
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/nreferral" class='text-center'>
                                        <i class="ri-links-fill"></i>
                                        <p>
                                            Links
                                        </p>
                                    </a>
                                </div>
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/nkyc" class='text-center' >
                                        <i class="ri-profile-fill"></i>
                                        <p>
                                            KYC
                                        </p>
                                    </a>
                                </div>
                                <div class="active p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/creator-lead" class='text-center'>
                                        <i class="ri-megaphone-fill"></i>
                                        <p>
                                            Lead
                                        </p>
                                    </a>
                                </div>
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                    <a href="/nleaderboard" class='text-center'>
                                        <i class="ri-award-fill"></i>
                                        <p>
                                            Leaderboard
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <!-- Profile -->
                            <t t-call="custom_web_kreator.partner_profile_dropdown" />
                        </div>
                    </header>
                    <div class="d-flex w-100">
                        <!-- Sidebar -->
                        <div class="sidebar border-end d-none d-lg-block">
                            <nav class="py-3 px-2">
                                <!-- Sidebar Menu -->
                                <ul class="d-flex flex-column gap-2">
                                    <a href="/master">
                                        <li>
                                            <i class="ri-dashboard-fill"></i> Get Started </li>
                                    </a>
                                    <a href="/master_income_data">
                                        <li class="active">
                                            <i class="ri-discount-percent-fill"></i> Sales </li>
                                    </a>
                                    <!-- Sales Dropdown -->
                                    <div class="ps-2 d-block d-lg-none">
                                        <li>
                                            <a href="/master_income_data"><i
                                                    class="ri-subtract-fill"></i> Income Data</a>
                                        </li>
                                        <li>
                                            <a href="/nreferral"><i class="ri-subtract-fill"></i>
                                                Links</a>
                                        </li>
                                        <li>
                                            <a href="/nkyc"><i class="ri-subtract-fill"></i> kyc</a>
                                        </li>
                                        <li>
                                            <i class="ri-subtract-fill"></i>
                                            <a href="/creator-lead">Lead</a>
                                        </li>
                                        <li>
                                            <a href="/nleaderboard"><i
                                                    class="ri-subtract-fill"></i> Leaderboard</a>
                                        </li>
                                    </div>
                                    <a href="/nmy-courses">
                                        <li>
                                            <i class="ri-product-hunt-fill"></i> Products </li>
                                    </a>
                                    <a href="/forumsection">
                                        <li>
                                            <i class="ri-user-community-fill"></i> Connect with
                                            Partner </li>
                                    </a>
                                    <a href="/coming-soon">
                                        <li>
                                            <i class="ri-user-fill"></i> Customer </li>
                                    </a>
                                    <a href="#">
                                        <li>
                                            <i class="ri-user-community-fill"></i> Become a Bee
                                            Partner </li>
                                    </a>
                                </ul>
                            </nav>
                        </div>
                        <!-- Sidebar Backdrop on mobile -->
                        <div class="backdrop d-none d-lg-none"></div>
                        <!-- Main Content -->
                        <main class="flex-grow-1 p-4 overflow-auto">
                            <!-- Welcome Section -->
                            <section class="welcome">
                                <div
                                    class="d-flex gap-2 flex-column flex-lg-row align-items-lg-center justify-content-between"
                                >
                                    <h1 class="d-flex align-items-center gap-1">
                                        <img class="play"
                                            src="/custom_web_kreator/static/src/user_icon.svg" />
                                        Welcome,<t
                                            t-esc="request.env.user.name" /></h1>
                                    <div class="d-flex gap-3 align-items-center">
                                        <a href="#"
                                        >Tutorial <img class="ms-1"
                                                src="/custom_web_kreator/static/src/play.png"
                                            /></a>
                                        <a href="#"
                                        ><img
                                                src="/custom_web_kreator/static/src/Whatsapp.png" />
                                            +1234567890</a>
                                    </div>
                                </div>
                            </section>
                            <!-- Lead Details -->
                            <section class="my-4">
                                <div class="lead-type mb-5">
                                    <span class="active" id='unverifiedOrdersBtnForCreator'>
                                        Unverified Orders
                                    </span>
                                    <span id='visitorsBtnForCreator'>
                                        Visitors
                                    </span>
                                </div>
                                <!-- Lead Table -->
                                <div id="unverifiedOrdersTableForCreator">
                                    <div class="row">
                                        <div class="col-lg-8 col-12 lead-table p-3">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>NAME</th>
                                                        <th>EMAIL</th>
                                                        <th>NUMBER</th>
                                                        <th>STATUS</th>
                                                        <th>DATE</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="sale_orders" t-as="order">
                                                        <tr>
                                                            <td>
                                                                <t t-esc="order.partner_id.name" />
                                                            </td>
                                                            <td>
                                                                <t t-if="order.partner_id.email">
                                                                    <a
                                                                        t-att-href="'mailto:' + order.partner_id.email">
                                                                        <t
                                                                            t-esc="order.partner_id.email" />
                                                                    </a>
                                                                </t>
                                                                <t t-else="">No Email</t>
                                                            </td>
                                                            <td>
                                                                <t t-esc="order.partner_id.phone" />
                                                            </td>
                                                            <td>
                                                                <t t-esc="order.state" />
                                                            </td>
                                                            <td>
                                                                <t
                                                                    t-esc="order.date_order.strftime('%Y-%m-%d %H:%M:%S')" />
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="col-lg-4 d-none d-lg-block col-12">
                                            <img class="write"
                                                src="/custom_web_kreator/static/src/write.png" />
                                        </div>
                                    </div>
                                </div>
                                <!-- Lead Table -->
                                <div id="visitorsTableForCreator">
                                    <div class="row">
                                        <div class="col-lg-8 col-12 lead-table p-3">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>NAME</th>
                                                        <th>FIRST CONNECTION</th>
                                                        <th>LAST CONNECTION</th>
                                                        <th>VISITS</th>
                                                        <th>PAGES</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="sale_orders" t-as="order">
                                                        <tr>
                                                            <td>
                                                                <t t-esc="order.partner_id.name" />
                                                            </td>
                                                            <td>
                                                                <t t-if="order.partner_id.email">
                                                                    <a
                                                                        t-att-href="'mailto:' + order.partner_id.email">
                                                                        <t
                                                                            t-esc="order.partner_id.email" />
                                                                    </a>
                                                                </t>
                                                                <t t-else="">No Email</t>
                                                            </td>
                                                            <td>
                                                                <t t-esc="order.partner_id.phone" />
                                                            </td>
                                                            <td>
                                                                <t t-esc="order.state" />
                                                            </td>
                                                            <td>
                                                                <t
                                                                    t-esc="order.date_order.strftime('%Y-%m-%d %H:%M:%S')" />
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="col-lg-4 d-none d-lg-block col-12">
                                            <img class="write"
                                                src="/custom_web_kreator/static/src/write.png" />
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </main>
                    </div>

                    <!-- External Script -->
                    <script src="/custom_web_kreator/static/src/js/script.js"></script>
                    <!-- bootstrap script -->
                    <script
                        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                        crossorigin="anonymous"
                    ></script>
                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                        // Select the buttons
                        const unverifiedOrdersBtnForCreator =
                        document.getElementById('unverifiedOrdersBtnForCreator');
                        const visitorsBtnForCreator =
                        document.getElementById('visitorsBtnForCreator');

                        // Select the content containers (tables)
                        const unverifiedOrdersTableForCreator =
                        document.getElementById('unverifiedOrdersTableForCreator');
                        const visitorsTableForCreator =
                        document.getElementById('visitorsTableForCreator');

                        // Ensure the default view is set (Unverified Orders visible, Visitors hidden)
                        unverifiedOrdersTableForCreator.style.display = "block"; 
                        visitorsTableForCreator.style.display = "none"; 
                        unverifiedOrdersBtnForCreator.classList.add('active'); 
                        // Function to toggle the active class and table visibility
                        function switchActive(buttonToActivate) {
                        // Remove 'active' class from both buttons
                        unverifiedOrdersBtnForCreator.classList.remove('active');
                        visitorsBtnForCreator.classList.remove('active');

                        // Add 'active' class to the clicked button
                        buttonToActivate.classList.add('active');

                        // Show/Hide the respective tables
                        if (buttonToActivate === unverifiedOrdersBtnForCreator) {
                        unverifiedOrdersTableForCreator.style.display = "block";
                        visitorsTableForCreator.style.display = "none";
                        console.log('Unverified Orders Table Shown');
                        } else {
                        unverifiedOrdersTableForCreator.style.display = "none";
                        visitorsTableForCreator.style.display = "block";
                        console.log('Visitors Table Shown');
                        }
                        }

                        // Add event listeners to the buttons
                        unverifiedOrdersBtnForCreator.addEventListener('click', function () {
                        switchActive(unverifiedOrdersBtnForCreator);
                        });

                        visitorsBtnForCreator.addEventListener('click', function () {
                        switchActive(visitorsBtnForCreator);
                        });
                        })


                    </script>
                </div>
            </body>
        </template>
    </data>
</odoo>