<odoo>
    <data>
        <template id="Npartner" name="Npartner Home">
            <head>
                <!-- meta tags -->
                <meta charset="UTF-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <!-- title -->
                <title>Kreator Bee | Sales</title>
                <!-- external css -->
                <link rel="stylesheet" href="/custom_web_kreator/static/src/css/custom_styl.css"/>
                <!-- bootstrap css -->
                <link
                        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                        rel="stylesheet"
                        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                        crossorigin="anonymous"
                />
                <!-- remix icon -->
                <link
                        href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
                        rel="stylesheet"
                />
                <style> @media (max-width: 769px) { /* Style the input field */ #fromDate,#toDate { position: relative;
                padding-right: 30px; /* Space for the calendar icon */ } /* Add the calendar icon using the ::after
                pseudo-element */ #fromDate::after,#toDate::after { content: "ðŸ“…"; /* Unicode calendar icon */ position:
                absolute; right: 10px; top: 50%; transform: translateY(-50%); pointer-events: none; /* Make sure the
                icon does not interfere with clicking the input */ font-size: 18px; /* Adjust the size of the calendar
                icon */ } }
            </style>
        </head>

        <body>
            <div class="layout">
                <!-- Header -->
                <header class="container-fluid">
                    <div
                            class="d-flex justify-content-between align-items-center border-bottom"
                    >
                        <!-- Menu Icon visible on mobile-->
                        <img
                                class="pe-2 d-block d-lg-none hamburger"
                                src="/custom_web_kreator/static/src/nev-icon.svg"
                        />
                        <!-- Logo -->
                        <img src="/custom_web_kreator/static/src/logo.png"/>
                        <!-- Menu-->
                        <div class="d-lg-flex d-none gap-4">
                            <div
                                    class="active p-lg-2 p-1 d-flex flex-column align-items-center"
                            >
                                <a href="/partner" class='text-center'>
                                    <i class="ri-line-chart-fill"></i>
                                    <p>
                                        Income Data
                                    </p>
                                </a>
                            </div>
                            <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                <a href="/partner-referral" class='text-center'>
                                    <i class="ri-links-fill"></i>
                                    <p>
                                        Links
                                    </p>
                                </a>
                            </div>
                            <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                <a href="/partner-kyc" class='text-center'>
                                    <i class="ri-profile-fill"></i>
                                    <p>
                                        KYC
                                    </p>
                                </a>
                            </div>
                            <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                <a href="/partner-lead" class='text-center'>
                                    <i class="ri-megaphone-fill"></i>
                                    <p>
                                        Lead
                                    </p>
                                </a>
                            </div>
                            <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                <a href="/partner-leaderboard" class='text-center'>
                                    <i class="ri-award-fill"></i>
                                    <p>
                                        Leaderboard
                                    </p>
                                </a>
                            </div>
                        </div>
                        <!-- Profile -->
                        <t t-call="custom_web_kreator.partner_profile_dropdown"/>
                    </div>
                </header>
                <div class="d-flex w-100">
                    <!-- Sidebar -->
                    <div class="sidebar border-end d-none d-lg-block">
                        <nav class="py-3 px-2">
                            <!-- Sidebar Menu -->
                            <ul class="d-flex flex-column gap-2">
                                <a href="/partner">
                                    <li class="active">
                                        <i class="ri-discount-percent-fill"></i>
                                        Sales
                                    </li>
                                </a>
                                <!-- Sales Dropdown -->
                                <div class="ps-2 d-block d-lg-none">
                                    <li>
                                        <a href="/master_income_data">
                                            <i
                                                    class="ri-subtract-fill"></i>
                                            Income Data
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/nreferral">
                                            <i class="ri-subtract-fill"></i>
                                            Links
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/nkyc">
                                            <i class="ri-subtract-fill"></i>
                                            kyc
                                        </a>
                                    </li>
                                    <li>
                                        <i class="ri-subtract-fill"></i>
                                        <a href="/creator-lead">Lead</a>
                                    </li>
                                    <li>
                                        <a href="/nleaderboard">
                                            <i
                                                    class="ri-subtract-fill"></i>
                                            Leaderboard
                                        </a>
                                    </li>
                                </div>
                                <a href="/partner-product">
                                    <li>
                                        <i class="ri-product-hunt-fill"></i>
                                        Products
                                    </li>
                                </a>
                                <a href="/npromote">
                                    <li>
                                        <i class="ri-user-community-fill"></i>
                                        Promote
                                    </li>
                                </a>
                                <a href="/forumsection-company">
                                    <li>
                                        <i class="ri-user-fill"></i>
                                        Community
                                    </li>
                                </a>
                                <a href="/nmy-courses-partner">
                                    <li>
                                        <i class="ri-user-community-fill"></i>
                                        My Courses
                                    </li>
                                </a>
                            </ul>
                        </nav>
                    </div>
                    <!-- Sidebar Backdrop on mobile -->
                    <div class="backdrop d-none d-lg-none"></div>
                    <!-- Main Content -->
                    <main class="flex-grow-1 p-4 overflow-auto">
                        <!-- Welcome Section -->
                        <section class="welcome">
                            <div
                                    class="d-flex gap-2 flex-column flex-lg-row align-items-lg-center justify-content-between"
                            >
                                <h1 class="d-flex align-items-center gap-1">
                                    <img class="play"
                                         src="/custom_web_kreator/static/src/user_icon.svg"/>
                                    Welcome,
                                    <t
                                            t-esc="request.env.user.name"/>
                                </h1>
                                <div class="d-flex gap-3 align-items-center">
                                    <a href="#"
                                    >Tutorial
                                        <img class="ms-1"
                                             src="/custom_web_kreator/static/src/play.png"
                                        />
                                    </a>
                                    <a href="#"
                                    >
                                        <img
                                                src="/custom_web_kreator/static/src/Whatsapp.png"/>
                                        +1234567890
                                    </a>
                                </div>
                            </div>
                        </section>
                        <!-- Lead Details -->
                        <div class="row my-4">
                            <!-- Left Blocks -->
                            <div class="col-md-4">
                                <!-- Block 1 -->
                                <div class="card mb-4">
                                    <div class="card-header bg-warning d-flex justify-content-between align-items-center">
                                        <h5>Total Sales</h5>
                                        <div class="input-group" style="max-width: 280px;">


                                        </div>
                                    </div>
                                    <div class="card-body text-center">
                                        <h6>All Time</h6>
                                        <h2>
                                            <t t-esc="commission['total']"/>
                                        </h2>
                                        <div class="row mt-4">
                                            <div class="col">
                                                <h6>Today</h6>
                                                <h4>
                                                    <t t-esc="commission['today']"/>
                                                </h4>
                                            </div>
                                            <div class="col">
                                                <h6>Last 7 Days</h6>
                                                <h4>
                                                    <t t-esc="commission['last_7_days']"/>
                                                </h4>
                                            </div>
                                            <div class="col">
                                                <h6>Last 30 Days</h6>
                                                <h4>
                                                    <t t-esc="commission['last_30_days']"/>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <!-- Block 4 -->
                                <div class="card mb-4">
                                    <div class="card-header bg-warning">
                                        <h5>Course Wise Earnings</h5>
                                    </div>
                                    <div class="card-body text-center">
                                        <img src="/custom_web_kreator/static/src/circle2.png" alt="Pie Chart"
                                             class="img-fluid" style="max-width: 57%; height: auto;"/>
                                    </div>
                                </div>

                            </div>


                            <!-- Right Blocks -->
                            <div class="col-md-4">
                                <!-- Block 4 -->
                                <div class="card mb-4">
                                    <div class="card-header bg-warning">
                                        <h5>State Wise Earnings</h5>
                                    </div>
                                    <div class="card-body text-center">
                                        <img src="/custom_web_kreator/static/src/circle2.png" alt="Pie Chart"
                                             class="img-fluid" style="max-width: 57%; height: auto;"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </main>
                </div>

                <!-- External Script -->
                <script src="/custom_web_kreator/static/src/js/script.js"></script>
                <!-- bootstrap script -->
                <script
                        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                        crossorigin="anonymous"
                ></script>
            </div>
        </body>
    </template>
</data>
        </odoo>
