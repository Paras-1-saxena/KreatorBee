                    /* Card Styling */
                    .card {
                    background: #fff;
                    border: 1px solid #ddd;
                    border-radius: 10px;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                    padding: 15px;
                    transition: box-shadow 0.3s ease;
                    }

                    .card:hover {
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                    }

                    /* Card Header */
                    .card-header {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    margin-bottom: 10px;
                    }

                    .card-header span {
                    font-size: 14px;
                    font-weight: bold;
                    color: #ff5722;
                    }

                    .card-header img {
                    width: 50px;
                    height: auto;
                    border-radius: 5px;
                    }

                    /* Progress Bar */
                    .card-progress {
                    margin: 10px 0;
                    }

                    .progress-bar {
                    background: #ddd;
                    height: 8px;
                    border-radius: 5px;
                    overflow: hidden;
                    }

                    .progress-bar .progress {
                    background: #ffd001;
                    height: 100%;
                    width: 20%; /* Example progress (adjust dynamically) */
                    transition: width 0.5s ease;
                    }

                    .progress-text {
                    display: block;
                    margin-top: 5px;
                    font-size: 12px;
                    color: #333;
                    }

                    /* Card Footer */
                    .card-footer {
                    margin-top: 10px;
                    }

                    .know-more {
                    color: #333;
                    font-weight: bold;
                    text-decoration: none;
                    font-size: 14px;
                    }

                    .know-more:hover {
                    text-decoration: underline;
                    }

                    .row {
                    display: flex;
                    flex-wrap: wrap;

                    }

                    .col-md-10, .col-md-2 {
                    flex: 0 0 auto;
                    padding-right: 15px;
                    padding-left: 15px;
                    }


                    .col-md-2 {
                    width: 16.66667%; /* 2/12 of the row */
                    }

                    .align-items-center {
                    align-items: center;
                    display: flex;
                    }

                    .d-flex {
                    display: flex;
                    }

                    .text-end {
                    text-align: end;
                    }

                    .bg-white {
                    background-color: #ffffff;
                    }


                    .border1 {
