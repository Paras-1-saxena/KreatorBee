}

.form-content,
.image-container {
    flex: 1 1 50%; /* Set both form and image sections to take 50% width */
    max-width: 50%; /* Ensure they do not exceed 50% width */
}

.form-content {
    display: flex;
    flex-direction: column;

}

.form-content label {
    font-size: 16px;
    font-weight: 600;
   
    color: #333;
}

.form-content input,
.form-content select {
    padding: 10px;
    font-size: 14px;
    border: 1px solid #ddd;
    border-radius: 5px;
    width: 100%;
    box-sizing: border-box;
    color:#4c4c4b;
    margin-bottom:15px;
}

.form-content .inline-fields {
    display: flex;
    gap: 20px; /* Space between the two date inputs */
    justify-content: space-evenly;
}
.inline-fields input[type="date"] {
    width: 100%; /* Make the date input fields take full width of their container */
    max-width: 200px; /* Adjust the maximum width as needed */
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}


.form-content .inline-fields input {
    flex: 1; /* Make both date inputs equal width */
}

.applicable-group {
    display: flex;
    align-items: center;
    gap: 10px; /* Space between the label and the radio group */
}

.radio-group {
    display: flex;
    gap: 20px; /* Space between radio buttons */
}

.radio-group label {
    display: flex;
    align-items: center;
    font-size: 14px;
}

.radio-group input[type="radio"] {
    margin-right: 8px;
}

.generate-btn {
    background-color: #ffd000;
                        color: #212529;
                        font-family: 'Poppins', sans-serif;
                        padding: 10px 15px;
                        border: none;
                        border-radius: 5px;
                        cursor: pointer;
                        transition: background-color 0.3s ease;
                        font-size: 16px;
                        padding:10px 20px;
                        letter-spacing: 1px;
                        margin-bottom:15px;
                        
}

.generate-btn:hover {
    background-color: #e0a800;
}

.image-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background-color: #fffbea;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.promo-box {
    background-color: #ffd001;
    border-radius: 5px;
    padding: 15px;
    color: #000;
    text-align: center;
    margin-bottom: 20px;
    width: 300px;
}

.promo-box h2 {
    font-size: 20px;
    margin-bottom: 5px;
}

.promo-box p {
    font-size: 16px;
    font-weight: bold;
}

.promo-box h1 {
    font-size: 28px;
    font-weight: bold;
    margin-top: 10px;
}

.image-container img {
    max-width: 30%; /* Reduce the width of the image relative to its container */
    height: auto; /* Maintain aspect ratio */
    border-radius: 10px; /* Optional: Add rounded corners if needed */
}

.coupon-container {
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    margin-top:20px;
}

.coupon-container h2 {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
