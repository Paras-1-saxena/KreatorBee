                    <t t-call="custom_web_kreator.partner_profile_dropdown"/>
                </div>
                <!-- Side Menu -->
                <div class="side-menu">
                    <ul>
                        <li>
                            <a href="/master" style="display:none">
                                <i class="fa fa-home"></i> Get Started
                            </a>
