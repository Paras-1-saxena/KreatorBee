                        font-weight: 500;
                        display: flex;
                        align-items: center;
                        gap: 12px;
                        padding: 12px;
                        border-radius: 5px;
                        transition: background-color 0.3s ease;
                    }

                    .side-menu ul li a.active {
                        background-color: #fef5c5;
                        color: #000;
                    }

                    .side-menu ul li a:hover {
                        background-color: #fef5c5;
                        color: #000;
                    }

                    .main-content {
                        margin-left: 270px; /* Adjust to create space from the side menu */
