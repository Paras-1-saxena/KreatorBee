}

.coupon-box p {
    font-size: 14px;
    font-weight: bold;
    margin-top: -8px;
}

.coupon-box h1 {
    font-size: 28px;
    margin: 10px 0;
    line-height: 1; /* Ensures KB100 and INR100 are close */
}

.coupon-box .price {
    font-size: 20px;
    font-weight: bold;
    margin: 0; /* No space below KB100 */
}

.coupon-box span {
    font-size: 12px;
    font-weight: bold;
}


.coupon-box.blue1 {
    background-color: #55a4ff;
}

.coupon-box.green1 {
    background-color: #3cdabb;
}

