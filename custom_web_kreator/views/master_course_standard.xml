<odoo>
    <data>
        <template id="master_course_standard" name="Master Courser Standard Template">
            <head>
                <!-- meta tags -->
                <meta charset="UTF-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <!-- title -->
                <title>Kreator Bee | Sales</title>
                <!-- external css -->
                <link rel="stylesheet" href="/custom_web_kreator/static/src/css/custom_styl.css"/>
                <link rel="stylesheet"
                      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
                <!-- bootstrap css -->
                <link
                        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                        rel="stylesheet"
                        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                        crossorigin="anonymous"
                />
                <!-- remix icon -->
                <link
                        href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
                        rel="stylesheet"
                />
                <style>

                    /* Top Menu */
                    .top-menu {
                    width: 100%;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    padding: 10px 20px;
                    background-color: #fff;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                    position: fixed;
                    top: 0;
                    z-index: 100;
                    height: 80px; /* Adjust height for new layout */
                    }

                    .top-menu .logo img {
                    height: 60px;
                    width: auto;
                    }

                    .top-menu .menu-links {
                    display: flex;
                    gap: 40px; /* Space between menu items */
                    align-items: center;
                    justify-content: center;
                    flex: 1;
                    }

                    .top-menu .menu-links a {
                    text-decoration: none;
                    color: #333;
                    font-size: 14px;
                    font-weight: 500;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    gap: 8px;
                    padding: 15px;
                    border-radius: 5px;
                    transition: background-color 0.3s ease;
                    height: 100%;
                    justify-content: center;
                    }

                    .top-menu .menu-links a.active {
                    background-color: #fef5c5;
                    color: #000;
                    }

                    .top-menu .menu-links a:hover {
                    background-color: #fef5c5;
                    color: #000;
                    }

                    .top-menu .menu-links i {
                    font-size: 24px; /* Icon size */
                    }
                    .top-menu .user-icon {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    object-fit: cover;
                    cursor: pointer;
                    margin-right: 30px; /* Adds space from the edge */
                    }

                    /* Side Menu */
                    .side-menu {
                    width: 270px;
                    background-color: #fff;
                    padding: 20px 10px;
                    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
                    position: fixed;
                    left: 0;
                    top: 60px; /* Adjust for top menu */
                    height: calc(100vh - 60px);
                    overflow-y: auto;
                    }

                    .side-menu ul {
                    list-style: none;
                    padding: 2;
                    }

                    .side-menu ul li {
                    margin: 15px 0;
                    }

                    .side-menu ul li a {
                    text-decoration: none;
                    color: #333;
                    font-size: 15px;
                    font-weight: 500;
                    display: flex;
                    align-items: center;
                    gap: 12px;
                    padding: 12px;
                    border-radius: 5px;
                    transition: background-color 0.3s ease;
                    }

                    .side-menu ul li a.active {
                    background-color: #fef5c5;
                    color: #000;
                    }

                    .side-menu ul li a:hover {
                    background-color: #fef5c5;
                    color: #000;
                    }

                    .main-content {
                    margin-left: 270px; /* Adjust to create space from the side menu */
                    padding: 20px; /* Maintain consistent padding inside the main content */
                    margin-top: 80px; /* Adjust for the top menu */
                    flex-grow: 1;
                    background-color:#f8f9fa;
                    }

                    /* Progress Bar */
                    .progress-bar-container {
                    width: 100%;
                    height:10px;
                    background-color: fef5c5;
                    margin-bottom: 20px;
                    position: relative;
                    }

                    .progress-bar {
                    height: 10px;
                    background-color: #ffd001!important;
                    width: 50%; /* Adjust for progress percentage */
                    transition: width 0.3s ease;
                    }

                    .content-containter {
                    background-color: white;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                    display: flex;
                    flex-direction: column;


                    overflow: hidden;
                    border:1px solid #ffd000;


                    }


                    .form-container {
                    display: flex;
                    justify-content: space-between;
                    flex: 1;
                    overflow-y: auto;
                    padding-bottom: 72px;
                    }

                    .form-content {
                    flex: 1;
                    padding: 0px 20px;
                    background-color: #fff;
                    overflow-y: auto;
                    margin-right: 10px;
                    }

                    .form-content h3 {
                    margin-top: 0;
                    margin-bottom: 5px; /* Reduce the space between the title and paragraph */
                    font-size: 18px;
                    color: #333;
                    font-weight: bold;
                    }


                    .form-content li {
                    margin-top: 0; /* Remove any additional top margin */
                    font-size: 14px;
                    color: #333;
                    line-height: 1.6;
                    margin-bottom: 15px; /* Keep some space below the paragraph */
                    }

                    .image-container {
                    flex: 1;
                    display: flex;
                    justify-content: center;

                    }

                    .image-container img {
                    max-width: 100%;
                    height: auto;
                    }

                    .bottom-section {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    margin-top: auto; /* Push to the bottom */
                    }


                    .form-label {
                    margin-bottom: 0;

                    }

                    button {
                    background-color: #ffd000;
                    color: #212529;
                    font-family: 'Poppins', sans-serif;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                    transition: background-color 0.3s ease;
                    font-size: 16px;
                    padding:5px 10px;
                    letter-spacing: 1px;


                    }
                    .border1{
                    border: 1px solid #ffd000;
                    }
                    .disabled-link {
                    pointer-events: none; /* Prevent clicking */
                    color: #999; /* Gray out the link */
                    cursor: not-allowed; /* Show a not-allowed cursor */
                    }

                    .sidebar ul li,header a {
                    font-size:17px;
                    }
                    .sidebar {
                    width:auto;
                    }
                    .active {
                    background-color: var(--beige-);
                    }


                </style>
            </head>

            <body>
                <!-- Header -->
                <header class="container-fluid">
                    <div
                            class="d-flex justify-content-between align-items-center border-bottom"
                    >
                        <!-- Menu Icon visible on mobile-->
                        <img
                                class="pe-2 d-block d-lg-none hamburger"
                                src="/custom_web_kreator/static/src/nev-icon.svg"
                        />
                        <!-- Logo -->
                        <img src="/custom_web_kreator/static/src/logo.png" style="height: 41px; width: 109px;"/>
                        <!-- Menu-->
                        <div class="d-lg-flex d-none gap-4">
                            <div
                                    class="p-lg-2 p-1 d-flex flex-column align-items-center"
                            >
                                <a class='text-center'>
                                    <i class="fa fa-book-reader"></i>
                                    <p>
                                        Course Details
                                    </p>
                                </a>
                            </div>
                            <div class="active  p-lg-2 p-1 d-flex flex-column align-items-center">
                                <a class='text-center'>
                                    <i class="fa fa-book"></i>
                                    <p>
                                        Course Standard
                                    </p>
                                </a>
                            </div>
                            <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                <a class='text-center'>
                                    <i class="fa fa-link"></i>
                                    <p>
                                        T &amp; C
                                    </p>
                                </a>
                            </div>
                            <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                                <a class='text-center'>
                                    <i class="fa fa-trophy"></i>
                                    <p>
                                        Welcome
                                    </p>
                                </a>
                            </div>
                        </div>
                        <!-- Profile -->
                        <t t-call="custom_web_kreator.partner_profile_dropdown"/>
                    </div>
                </header>


                <div class="d-flex w-100">
                    <!-- Sidebar -->
                    <div class="sidebar border-end d-none d-lg-block">
                        <nav class="py-3 px-2">
                            <!-- Sidebar Menu -->
                            <ul class="d-flex flex-column gap-2">
                                <a href="/creator/course_detail">
                                    <li class="active">
                                        <i class="ri-dashboard-fill"></i>
                                        Get Started
                                    </li>
                                </a>
                                <a t-att-href="(course_count and approve_course_count) and '/creator/income' or '#'"
                                   t-att-class="('disabled-link' if not course_count or (course_count and not approve_course_count) else '')">
                                    <li>
                                        <i class="ri-discount-percent-fill"></i>
                                        Sales
                                        <t t-if="not course_count or (course_count and not approve_course_count)">
                                            <i class="fa fa-lock" style="margin-left: 5px;"></i>
                                        </t>
                                    </li>
                                </a>
                                <!-- Sales Dropdown -->
                                <div class="ps-2 d-block d-lg-none">
                                    <li>
                                        <a href="/creator/income">
                                            <i
                                                    class="ri-subtract-fill"></i>
                                            Course Details
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/creator/referral">
                                            <i class="ri-subtract-fill"></i>
                                            Links
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/creator/kyc">
                                            <i class="ri-subtract-fill"></i>
                                            kyc
                                        </a>
                                    </li>
                                    <li>
                                        <i class="ri-subtract-fill"></i>
                                        <a href="/creator/lead">Lead</a>
                                    </li>
                                    <li>
                                        <a href="/creator/leaderboard">
                                            <i
                                                    class="ri-subtract-fill"></i>
                                            Leaderboard
                                        </a>
                                    </li>
                                </div>
                                <a t-att-href="course_count and '/nmy-courses' or '#'"
                                   t-att-class="('disabled-link' if not course_count else 'active')">
                                    <li>
                                        <i class="ri-product-hunt-fill"></i>
                                        Products
                                        <t t-if="not course_count">
                                            <i class="fa fa-lock" style="margin-left: 5px;"></i>
                                        </t>
                                    </li>
                                </a>
                                <a t-att-href="(course_count and approve_course_count) and '/forumsection' or '#'"
                                   t-att-class="('disabled-link' if not course_count or (course_count and not approve_course_count) else '')">
                                    <li>
                                        <i class="ri-user-community-fill"></i>
                                        Connect with Partner
                                        <t t-if="not course_count or (course_count and not approve_course_count)">
                                            <i class="fa fa-lock" style="margin-left: 5px;"></i>
                                        </t>
                                    </li>
                                </a>
                                <a t-att-href="(course_count and approve_course_count) and '/creator/customer' or '#'"
                                   t-att-class="('disabled-link' if not course_count or (course_count and not approve_course_count) else '')">
                                    <li>
                                        <i class="ri-user-fill"></i>
                                        Customer
                                        <t t-if="not course_count or (course_count and not approve_course_count)">
                                            <i class="fa fa-lock" style="margin-left: 5px;"></i>
                                        </t>
                                    </li>
                                </a>
                                <a data-bs-toggle="modal" data-bs-target="#logoutModal"
                                   t-att-href="(course_count and approve_course_count) and '#' or '#'"
                                   t-att-class="('disabled-link' if not course_count or (course_count and not approve_course_count) else '')">
                                    <li>
                                        <i class="ri-user-community-fill"></i>
                                        Become a Bee Partner
                                        <t t-if="not course_count or (course_count and not approve_course_count)">
                                            <i class="fa fa-lock" style="margin-left: 5px;"></i>
                                        </t>
                                    </li>
                                </a>
                            </ul>
                        </nav>
                    </div>

                    <!-- Sidebar Backdrop on mobile -->
                    <div class="backdrop d-none d-lg-none"></div>

                    <!-- Main Content -->
                    <main class="flex-grow-1 p-4 overflow-auto">
                        <!-- Welcome Section -->
                        <section class="welcome">
                            <div
                                    class="d-flex gap-2 flex-column flex-lg-row align-items-lg-center justify-content-between"
                            >
                                <h1 class="d-flex align-items-center gap-1">
                                    <img class="play"
                                         src="/custom_web_kreator/static/src/user_icon.svg"/>
                                    Welcome,
                                    <t t-esc="request.env.user.name"/>
                                </h1>
                                <div class="d-flex gap-3 align-items-center">
                                    <a href="#"
                                    >Tutorial
                                        <img class="ms-1"
                                             src="/custom_web_kreator/static/src/play.png"
                                        />
                                    </a>
                                    <a href="#"
                                    >
                                        <img
                                                src="/custom_web_kreator/static/src/Whatsapp.png"/>
                                        +1234567890
                                    </a>
                                </div>
                            </div>
                        </section>

                        <!-- KYC Details -->
                        <div class="row my-4">
                            <div class="col-12">
                                <div class="progress-bar-container">
                                    <div class="progress-bar"></div>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="form-content overflow-auto" style="height: 70%;">
                                    <strong>1. Visual Requirements</strong>
                                    <ul>
                                        <li><strong>Video Format:</strong>All video lessons must be in horizontal format
                                            (landscape
                                            orientation).
                                        </li>
                                        <li><strong>Video Quality:</strong>Minimum resolution of 720p (1280x720 pixels)
                                            and a frame
                                            rate of at least 30 frames per second.
                                        </li>
                                        <li>
                                            <strong>Video Length:</strong>
                                            <ul>
                                                <li>Recommended video length: 5-20 minutes per lesson (adjust based on
                                                    content
                                                    complexity).
                                                </li>
                                                <li>Avoid excessively long or short videos.</li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <strong>2. Content Requirements</strong>
                                    <ul>
                                        <li>
                                            <strong>Content Quality:</strong>
                                            <ul>
                                                <li>Content must be original, high-quality, and free from
                                                    misinformation.
                                                </li>
                                                <li>All information must be accurate and up-to-date.</li>
                                                <li>Content should provide real-world value.</li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <strong>3.  Pricing &amp; Value</strong>
                                    <ul>
                                        <li>
                                            <strong>Justified Pricing:</strong>
                                            <ul>
                                                <li>Course pricing should be competitive and reflect the value</li>
                                                <li>Consider market research and competitor pricing when setting your
                                                </li>
                                            </ul>
                                        </li>
                                        <li><strong>Discount for KreatorBee:</strong>Offer a competitive price on
                                            KreatorBee
                                            compared to other platforms where the course is sold.
                                        </li>
                                    </ul>
                                    <strong>4.  Approval Process</strong>
                                    <ul>
                                        <li>All courses must be submitted for review and approval by the KreatorBee team
                                            before
                                            being listed on the platform.
                                        </li>
                                        <li>The KreatorBee team reserves the right to reject any course that does not
                                            meet these
                                            standards.
                                        </li>
                                    </ul>
                                </div>
                                <form method="post" action="/creator/terms">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="course_data" t-att-value="course_data"/>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="google-drive-link" style="font-weight:600;"
                                                   class="form-label pt-2">
                                                Paste Google Drive Link Here
                                                <span style="color: red;">*</span>
                                            </label>

                                        </div>
                                    </div>
                                    <div class="row justify-content-around">
                                        <div class="col-12">
                                            <div id="input-container">
                                                <div class="input-group"
                                                     style="display: flex; align-items: center; margin-bottom: 5px;">
                                                    <input type="text" name="google_drive_link[]"
                                                           class="form-control pb-1 google-drive-link"
                                                           placeholder="e.g. https://drive.google.com/drive/u/0/my-drive"
                                                           style="width: 90%; margin-right: 10px;" required="required"/>
                                                    <span class="delete-btn" style="cursor: pointer;">
                                                        <img src="https://cdn-icons-png.flaticon.com/512/6861/6861362.png"
                                                             alt="Delete" width="20px" style="filter: brightness(0);"/>
                                                    </span>
                                                </div>
                                            </div>
                                            <span class="add-more" style="float:right; width:16%; cursor:pointer;">Add
                                                More
                                                +
                                            </span>
                                        </div>
                                        <div class="col-2">
                                            <button type="button" onclick="goBack()">Back</button>
                                        </div>
                                        <div class="col-2">
                                            <button type="submit">Save and Continue</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-4">
                                <div class="image-container">
                                    <img src="/custom_web_kreator/static/src/Course-Standard_image.png"
                                         alt="Course Standard Image"
                                    />
                                </div>
                            </div>

                        </div>


                    </main>
                </div>
                <script type="text/javascript">
                    function goBack() {
                    window.history.back();
                    }
                </script>
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                    const form = document.querySelector('form[action="/creator/terms"]');
                    const googleDriveLinkPattern = new RegExp(
                    '^(https:\\/\\/)?(docs|drive)\\.google\\.com\\/(document|spreadsheets|presentation|forms|drive|file)\\/(d\\/)?[^\\s]+$',
                    'i'
                    );

                    function validateInput(input) {
                    if (!googleDriveLinkPattern.test(input.value.trim())) {
                    input.setCustomValidity('Please enter a valid Google Drive or Google Docs link.');
                    } else {
                    input.setCustomValidity('');
                    }
                    }

                    form.querySelectorAll('input[name="google_drive_link[]"]').forEach(input => {
                    input.addEventListener('input', function() {
                    validateInput(input);
                    });
                    });

                    form.addEventListener('submit', function(event) {
                    let isValid = true;
                    form.querySelectorAll('input[name="google_drive_link[]"]').forEach(input => {
                    validateInput(input);
                    if (!input.checkValidity()) {
                    isValid = false;
                    }
                    });

                    if (!isValid) {
                    event.preventDefault();
                    // Optionally, focus the first invalid input
                    form.querySelector('input[name="google_drive_link[]"]:invalid').focus();
                    }
                    });
                    });


                    document.querySelector('.add-more').addEventListener('click', function () {
                    let container = document.getElementById('input-container');

                    // Create a new div to hold input and delete button
                    let newDiv = document.createElement('div');
                    newDiv.className = 'input-group';
                    newDiv.style = 'display: flex; align-items: center; margin-bottom: 5px;';

                    // Create new input field
                    let newInput = document.createElement('input');
                    newInput.type = 'text';
                    newInput.name = 'google_drive_link[]';
                    newInput.className = 'form-control pb-1 google-drive-link';
                    newInput.placeholder = 'e.g. https://drive.google.com/drive/u/0/my-drive';
                    newInput.style = 'width: 90%; margin-right: 10px;';

                    // Create delete button
                    let deleteBtn = document.createElement('span');
                    deleteBtn.className = 'delete-btn';
                    deleteBtn.style = 'cursor: pointer;';
                    deleteBtn.innerHTML = '<img
                        src="https://cdn-icons-png.flaticon.com/512/6861/6861362.png"
                        alt="Delete"
                        width="20px" style="filter: brightness(0);"/>';
                    deleteBtn.onclick = function () {
                    container.removeChild(newDiv);
                    };

                    // Append input and delete button to div
                    newDiv.appendChild(newInput);
                    newDiv.appendChild(deleteBtn);

                    // Append div to container
                    container.appendChild(newDiv);
                    });

                    // Delegate delete button functionality
                    document.getElementById('input-container').addEventListener('click', function (e) {
                    if (e.target.closest('.delete-btn')) {
                    e.target.closest('.input-group').remove();
                    }
                    });
                </script>
                <!-- External Script -->
                <script src="/custom_web_kreator/static/src/js/script.js"></script>
                <!-- bootstrap script -->
                <script
                        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                        crossorigin="anonymous"
                ></script>
            </body>
        </template>
    </data>
</odoo>
