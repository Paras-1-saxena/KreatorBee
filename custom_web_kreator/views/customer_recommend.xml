<odoo>
    <data>
        <template id="customer_courses_recommend" name="Customer Courses Recommended Template">
            <head>
                <!-- meta tags -->
                <meta charset="UTF-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <!-- title -->
                <title>Kreator Bee | Sales</title>
                <!-- external css -->
                <link rel="stylesheet" href="/custom_web_kreator/static/src/css/custom_styl.css"/>
                <!-- bootstrap css -->
                <link
                        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                        rel="stylesheet"
                        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                        crossorigin="anonymous"
                />
                <!-- remix icon -->
                <link
                        href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
                        rel="stylesheet"
                />
                <style>@media (max-width: 769px) { /* Style the input field */ #fromDate,#toDate { position: relative;
                    padding-right: 30px; /* Space for the calendar icon */ } /* Add the calendar icon using the ::after
                    pseudo-element */ #fromDate::after,#toDate::after { content: "ðŸ“…"; /* Unicode calendar icon */
                    position:
                    absolute; right: 10px; top: 50%; transform: translateY(-50%); pointer-events: none; /* Make sure the
                    icon does not interfere with clicking the input */ font-size: 18px; /* Adjust the size of the
                    calendar
                    icon */ } }
                </style>
            </head>

            <body>
                <div class="layout">
                    <!-- Header -->
                    <header class="container-fluid">
                        <div
                                class="d-flex justify-content-between align-items-center border-bottom"
                        >
                            <!-- Menu Icon visible on mobile-->
                            <img
                                    class="pe-2 d-block d-lg-none hamburger"
                                    src="/custom_web_kreator/static/src/nev-icon.svg"
                            />
                            <!-- Logo -->
                            <img src="/custom_web_kreator/static/src/logo.png" style="height: 41px; width: 109px;"/>
                            <!-- Menu-->
                            <div class="d-lg-flex d-none gap-4">
                                <div
                                        class="active p-lg-2 p-1 d-flex flex-column align-items-center"
                                >
                                    <a href="/customer/courses_recommend" class='text-center'>
                                        <i class="ri-book-marked-fill"></i>
                                        <p>
                                            Recommended Courses
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <!-- Profile -->
                            <t t-call="custom_web_kreator.partner_profile_dropdown"/>
                        </div>
                    </header>
                    <div class="d-flex w-100">
                        <!-- Sidebar -->
                        <div class="sidebar border-end d-none d-lg-block">
                            <nav class="py-3 px-2">
                                <!-- Sidebar Menu -->
                                <ul class="d-flex flex-column gap-2">
                                    <a href="/customer/mycourses">
                                        <li>
                                            <i class="ri-book-open-fill"></i>
                                            My Courses
                                        </li>
                                    </a>
                                    <a href="/customer/courses_recommend">
                                        <li class="active">
                                            <i class="ri-book-marked-fill"></i>
                                            Recommended Courses
                                        </li>
                                    </a>
                                    <a href="/customer/updates">
                                        <li>
                                            <i class="ri-user-community-fill"></i>
                                            Updates
                                        </li>
                                    </a>
                                </ul>
                            </nav>
                        </div>
                        <!-- Sidebar Backdrop on mobile -->
                        <div class="backdrop d-none d-lg-none"></div>

                        <!-- Main Content -->
                        <main class="flex-grow-1 p-4 overflow-auto">

                            <!-- Welcome Section -->
                            <section class="welcome">
                                <div class="d-flex gap-2 flex-column flex-lg-row align-items-lg-center justify-content-between">
                                    <h1 class="d-flex align-items-center gap-1">
                                        <img
                                                class="play"
                                                src="/custom_web_kreator/static/src/user_icon.svg"
                                        />
                                        Welcome,
                                        <t t-esc="request.env.user.name"/>
                                    </h1>
                                    <div class="d-flex gap-3 align-items-center">
                                        <a
                                                href="/tutorial"
                                        >
                                            Tutorial
                                            <img
                                                    class="ms-1"
                                                    src="/custom_web_kreator/static/src/play.png"
                                            />
                                        </a>
                                        <a
                                                href="#"
                                        >
                                            <img
                                                    src="/custom_web_kreator/static/src/Whatsapp.png"
                                            />
                                            +1234567890
                                        </a>
                                    </div>
                                </div>
                            </section>
                            <!--            Main Section-->
                            <div class="row my-4 justify-content-around">
                                <t t-foreach="recommended_courses" t-as="course">
                                    <!--<div class="row bg-white border1 mb-3">-->
                                    <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                                        <div class="card p-3">
                                            <div class="row">
                                                <!-- Image Section -->
                                                <div class="col-md-6 d-flex align-items-center">
                                                    <a>
                                                        <img t-att-src="image_data_uri(course.image_1920) if course.image_1920 else '/custom_web_kreator/static/src/thumbnail.png'"
                                                             alt="Course Thumbnail" class="rounded"
                                                             style="width: 100%; height: 100%; object-fit: cover; display: block; margin: 0 auto;"/>
                                                    </a>
                                                </div>

                                                <!-- Text and Button Section -->
                                                <div class="col-md-5 d-flex flex-column justify-content-center">
                                                    <p>
                                                        <strong>Course Name:</strong>
                                                        <span t-esc="course.name"/>
                                                    </p>
                                                    <p>
                                                        <strong>Creator's Name:</strong>
                                                        <span t-esc="course.create_uid.name"/>
                                                    </p>
                                                    <p>
                                                        <strong>Price:</strong>
                                                        <span t-esc="'INR %s' % course.sales_price"/>
                                                        <t t-if="course.regular_price">
                                                            &#160;/&#160;
                                                            <strike t-esc="'INR %s' % course.regular_price"/>
                                                        </t>
                                                    </p>
                                                    <p class="fs-5 text-warning">
                                                        <b>To Purchase, <br/>Contact your Bee Partner</b>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </main>
                    </div>

                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

                    <!-- External Script -->
                    <script src="/custom_web_kreator/static/src/js/script.js"></script>
                    <!-- bootstrap script -->
                    <script
                            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                            crossorigin="anonymous"
                    ></script>
                </div>
            </body>
        </template>
    </data>
</odoo>
