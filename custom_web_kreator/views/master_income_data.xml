<odoo>
  <data>
    <template id="master_income_data" name="Master income data Template">
      <head>
        <!-- meta tags -->
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- title -->
        <title>Kreator Bee | Sales</title>
        <!-- external css -->
        <link rel="stylesheet" href="/custom_web_kreator/static/src/css/custom_styl.css" />
        <!-- bootstrap css -->
        <link
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous"
        />
        <!-- remix icon -->
        <link
          href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
          rel="stylesheet"
        />
        <style>
          .sidebar ul li,header a {
          font-size:17px;
          }
          .sidebar {
          width:auto;
          }
        </style>
      </head>

      <body>
        <div class="layout">
          <!-- Header -->
          <header class="container-fluid">
            <div
              class="d-flex justify-content-between align-items-center border-bottom"
            >
              <!-- Menu Icon visible on mobile-->
              <img
                class="pe-2 d-block d-lg-none hamburger"
                src="/custom_web_kreator/static/src/nev-icon.svg"
              />
              <!-- Logo -->
              <img src="/custom_web_kreator/static/src/logo.png" />
              <!-- Menu-->
              <div class="d-lg-flex d-none gap-4">
                <div
                  class="active p-lg-2 p-1 d-flex flex-column align-items-center"
                >
                  <a href="/master_income_data" class='text-center'>
                    <i class="ri-line-chart-fill"></i>
                    <p>
                      Income Data
                    </p>
                  </a>
                </div>
                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                  <a href="/nreferral" class='text-center'>
                    <i class="ri-links-fill"></i>
                    <p>
                      Links
                    </p>
                  </a>
                </div>
                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                  <a href="/nkyc" class='text-center'>
                    <i class="ri-profile-fill"></i>
                    <p>
                      KYC
                    </p>
                  </a>
                </div>
                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                  <a href="/creator-lead" class='text-center'>
                    <i class="ri-megaphone-fill"></i>
                    <p>
                      Lead
                    </p>
                  </a>
                </div>
                <div class="p-lg-2 p-1 d-flex flex-column align-items-center">
                  <a href="/nleaderboard" class='text-center'>
                    <i class="ri-award-fill"></i>
                    <p>
                      Leaderboard
                    </p>
                  </a>
                </div>
              </div>
              <!-- Profile -->
              <t t-call="custom_web_kreator.partner_profile_dropdown" />
            </div>
          </header>

          <div class="d-flex w-100">
            <!-- Sidebar -->
            <div class="sidebar border-end d-none d-lg-block">
              <nav class="py-3 px-2">
                <!-- Sidebar Menu -->
                <ul class="d-flex flex-column gap-2">
                  <a href="/master">
                    <li>
                      <i class="ri-dashboard-fill"></i> Get Started </li>
                  </a>
                  <a href="/master_income_data">
                    <li class="active">
                      <i class="ri-discount-percent-fill"></i> Sales </li>
                  </a>
                  <!-- Sales Dropdown -->
                  <div class="ps-2 d-block d-lg-none">
                    <li>
                      <a href="/master_income_data"><i
                          class="ri-subtract-fill"></i> Income Data</a>
                    </li>
                    <li>
                      <a href="/nreferral"><i class="ri-subtract-fill"></i> Links</a>
                    </li>
                    <li>
                      <a href="/nkyc"><i class="ri-subtract-fill"></i> kyc</a>
                    </li>
                    <li>
                      <i class="ri-subtract-fill"></i>
                      <a href="/creator-lead">Lead</a>
                    </li>
                    <li>
                      <a href="/nleaderboard"><i
                          class="ri-subtract-fill"></i> Leaderboard</a>
                    </li>
                  </div>
                  <a href="/nmy-courses">
                    <li>
                      <i class="ri-product-hunt-fill"></i> Products </li>
                  </a>
                  <a href="/forumsection">
                    <li>
                      <i class="ri-user-community-fill"></i> Connect with Partner </li>
                  </a>
                  <a href="/coming-soon">
                    <li>
                      <i class="ri-user-fill"></i> Customer </li>
                  </a>
                  <a href="#">
                    <li>
                      <i class="ri-user-community-fill"></i> Become a Bee Partner </li>
                  </a>
                </ul>
              </nav>
            </div>

            <!-- Sidebar Backdrop on mobile -->
            <div class="backdrop d-none d-lg-none"></div>

            <!-- Main Content -->
            <main class="flex-grow-1 p-4 overflow-auto">
              <!-- Sales Stat -->
              <section
                class="d-flex flex-column justify-content-center align-items-center stat"
              >
                <h2 class="my-5">Welcome,
                  <t t-esc="request.env.user.name"/>
                </h2>
                <div
                  class="d-flex flex-column flex-lg-row gap-5 justify-content-center align-items-center">
                  <div class="summary">
                    <h3>Total Sales</h3>
                    <h4>
                      <t t-esc="commission['total']" />
                    </h4>
                    <div>
                      <p class="d-flex justify-content-between">Today <span>: <t
                            t-esc="commission['today']" /></span></p>
                      <p class="d-flex justify-content-between">Last 7 Days <span>: <t
                            t-esc="commission['last_7_days']" /></span></p>
                      <p class="d-flex justify-content-between">Last 30 Days <span>: <t
                            t-esc="commission['last_30_days']" /></span></p>
                    </div>
                  </div>
                  <div class="summary">
                    <h3>Partner Sales</h3>
                    <h4>
                      <t t-esc="partner_commission['total']" />
                    </h4>
                    <div>
                      <p class="d-flex justify-content-between">Today <span>: <t
                            t-esc="partner_commission['total']" /></span></p>
                      <p class="d-flex justify-content-between">Last 7 Days <span>: <t
                            t-esc="partner_commission['last_7_days']" /></span></p>
                      <p class="d-flex justify-content-between">Last 30 Days <span>: <t
                            t-esc="partner_commission['last_30_days']" /></span></p>
                    </div>
                  </div>
                  <div class="summary">
                    <h3>Direct Sales</h3>
                    <h4>
                      <t t-esc="direct_commission['total']" />
                    </h4>
                    <div>
                      <p class="d-flex justify-content-between">Today <span>: <t
                            t-esc="direct_commission['total']" /></span></p>
                      <p class="d-flex justify-content-between">Last 7 Days <span>: <t
                            t-esc="direct_commission['total']" /></span></p>
                      <p class="d-flex justify-content-between">Last 30 Days <span>: <t
                            t-esc="direct_commission['total']" /></span></p>
                    </div>
                  </div>
                </div>
                <!-- Sales Chart -->
                <div
                  class="d-flex flex-column flex-lg-row gap-5 justify-content-center align-items-center mt-4"
                >
                  <div class="chart p-4">
                    <canvas id="doughnutChart-one"></canvas>
                  </div>
                  <div class="chart p-4">
                    <canvas id="doughnutChart-two"></canvas>
                  </div>
                  <div class="chart p-4">
                    <canvas id="doughnutChart-three"></canvas>
                  </div>
                </div>
              </section>
            </main>
          </div>
        </div>
        <!-- External Script -->
        <script src="/custom_web_kreator/static/src/js/script.js"></script>
        <!-- bootstrap script -->
        <script
          src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
          crossorigin="anonymous"
        ></script>
        <!-- Chart.js -->
        <script
          src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
        <!-- Chart Data -->
        <script>
          const ctx1 = document.querySelector("#doughnutChart-one").getContext("2d");
          const ctx2 = document.querySelector("#doughnutChart-two").getContext("2d");
          const ctx3 = document.querySelector("#doughnutChart-three").getContext("2d");

          const doughnutChartOne = new Chart(ctx1, {
          type: "doughnut",
          data: {
          labels: ["Electronics", "Clothing", "Food", "Books", "Other"],
          datasets: [
          {
          label: "Sales Distribution",
          data: [35, 25, 20, 15, 5],
          backgroundColor: [
          "rgba(255, 205, 0, 1)",
          "rgba(0, 0, 0, 1)",
          "rgba(8, 0, 102, 1)",
          "rgba(255, 119, 0, 1)",
          "rgba(255, 245, 198, 1)",
          ],
          borderColor: [
          "rgba(255, 205, 0, 0.7)",
          "rgba(0, 0, 0, 0.7)",
          "rgba(8, 0, 102, 0.7)",
          "rgba(255, 119, 0, 0.7)",
          "rgba(255, 245, 198, 0.7)",
          ],
          borderWidth: 1,
          },
          ],
          },
          options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
          legend: {
          display: false,
          position: "bottom",
          labels: {
          font: {
          size: 14,
          },
          padding: 20,
          },
          },
          title: {
          display: true,
          text: "State Wise Earnings",
          font: {
          size: 18,
          },
          padding: {
          bottom: 10,
          },
          },
          tooltip: {
          callbacks: {
          label: function (context) {
          let label = context.label || "";
          let value = context.raw || 0;
          return `${label}: ${value}%`;
          },
          },
          },
          },
          cutout: "65%",
          animation: {
          animateScale: true,
          animateRotate: true,
          duration: 2000,
          },
          },
          });

          const doughnutChartTwo = new Chart(ctx2, {
          type: "doughnut",
          data: {
          labels: ["Electronics", "Clothing", "Food", "Books", "Other"],
          datasets: [
          {
          label: "Sales Distribution",
          data: [35, 25, 20, 15, 5],
