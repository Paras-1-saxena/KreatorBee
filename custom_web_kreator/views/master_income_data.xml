          "rgba(255, 245, 198, 1)",
          ],
          borderColor: [
          "rgba(255, 205, 0, 0.7)",
          "rgba(0, 0, 0, 0.7)",
          "rgba(8, 0, 102, 0.7)",
          "rgba(255, 119, 0, 0.7)",
          "rgba(255, 245, 198, 0.7)",
          ],
          borderWidth: 1,
          },
          ],
          },
          options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
          legend: {
          display: false,
          position: "bottom",
          labels: {
          font: {
          size: 14,
          },
          padding: 20,
          },
          },
          title: {
          display: true,
          text: "Course Wise Earnings",
          font: {
          size: 18,
          },
          padding: {
          bottom: 10,
          },
          },
          tooltip: {
          callbacks: {
          label: function (context) {
          let label = context.label || "";
          let value = context.raw || 0;
          return `${label}: ${value}%`;
          },
          },
          },
          },
          cutout: "65%",
          animation: {
          animateScale: true,
          animateRotate: true,
          duration: 2000,
          },
          },
          });

          const doughnutChartThree = new Chart(ctx3, {
          type: "doughnut",
          data: {
          labels: ["Electronics", "Clothing", "Food", "Books", "Other"],
          datasets: [
          {
          label: "Sales Distribution",
          data: [35, 25, 20, 15, 5],
          backgroundColor: [
          "rgba(255, 205, 0, 1)",
          "rgba(0, 0, 0, 1)",
          "rgba(8, 0, 102, 1)",
          "rgba(255, 119, 0, 1)",
          "rgba(255, 245, 198, 1)",
          ],
          borderColor: [
          "rgba(255, 205, 0, 0.7)",
          "rgba(0, 0, 0, 0.7)",
          "rgba(8, 0, 102, 0.7)",
          "rgba(255, 119, 0, 0.7)",
          "rgba(255, 245, 198, 0.7)",
          ],
          borderWidth: 1,
          },
          ],
          },
          options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
          legend: {
          display: false,
          position: "bottom",
          labels: {
          font: {
          size: 14,
          },
          padding: 20,
          },
          },
          title: {
          display: true,
          text: "Month Wise Earnings",
          font: {
          size: 18,
          },
          padding: {
          bottom: 10,
          },
          },
          tooltip: {
          callbacks: {
          label: function (context) {
          let label = context.label || "";
          let value = context.raw || 0;
          return `${label}: ${value}%`;
          },
          },
          },
          },
          cutout: "65%",
          animation: {
          animateScale: true,
          animateRotate: true,
          duration: 2000,
          },
          },
          });
        </script>
      </body>
    </template>
  </data>
</odoo>