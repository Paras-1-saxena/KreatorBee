                    <t t-else="">
                        <div class="hook">🔥 Limited Slots</div>
                        <h1 style="border-bottom: 1px solid black; margin-bottom: 30px; padding-bottom: 6px;"
                            id="form_title">Book Your Free Slot Now
                        </h1>
                        <!--                        <p>Take the first step toward transforming your future with our exclusive program.</p>-->
                        <form action="/live/slot/book" method="POST" id="leadForm">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="text" name="name" placeholder="Your Name" required="required" id="name"/>
                            <input type="email" name="email" placeholder="Email Address" required="required"
