            </body>
            <script>
                let name = document.getElementById('name');
                let email = document.getElementById('email');
                let mobile = document.getElementById('mobile');
                let profession = document.getElementById('profession');
                let describe = document.getElementById('describe');
                let city = document.getElementById('city');
                let income_sec = document.getElementById('income_sec');
                let income = document.getElementById('income');
                let affiliate_career = document.getElementById('affiliate_career');
                let slot_header = document.getElementById('slot_header');
                let date_select = document.getElementById('date_select');
                let time_select = document.getElementById('time_select');
                let form_title = document.getElementById('form_title');
                let basic_button = document.getElementById('basic_button');
                let professional_button = document.getElementById('professional_button');
                let income_button = document.getElementById('income_button');
                let submit_button_sec = document.getElementById('submit_button_sec');

                function open_profession() {
                if (name.value == '') {
                alert('Enter Your Name');
                return;
                }
                if (email.value == '') {
                alert('Enter Your email');
                return;
                }
                if (mobile.value == '' || mobile.value.length &lt; 10 || mobile.value.length &gt; 10) {
                alert('Enter a valid mobile Number');
                return;
                }
                name.style.display = 'none';
                email.style.display = 'none';
                mobile.style.display = 'none';
                profession.style.display = 'block';
                basic_button.style.display = 'none';
                professional_button.style.display = 'block';
                form_title.innerHTML = 'Please Answer the following Questions';
                }

                function back_income() {
                name.style.display = 'block';
                email.style.display = 'block';
                mobile.style.display = 'block';
                profession.style.display = 'none';
                basic_button.style.display = 'block';
                professional_button.style.display = 'none';
                form_title.innerHTML = 'Book Your Free Slot Now';
                }

                function open_income() {
                if (describe.value == '') {
                alert('Please Describe Yourself');
                return;
                }
                if (city.value == '') {
                alert('Please Enter Your City');
                return;
                }
                profession.style.display = 'none';
                income_sec.style.display = 'block';
                professional_button.style.display = 'none';
                income_button.style.display = 'block';
                }

                function back_slot() {
                profession.style.display = 'block';
                income_sec.style.display = 'none';
                professional_button.style.display = 'block';
                income_button.style.display = 'none';
                }

                function open_slot() {
                if (income.value == 0) {
                alert('Please Answer the following Questions');
                return;
                }
                if (affiliate_career.value == 0) {
                alert('Please Answer the following Questions');
                return;
                }
                slot_header.style.display = 'block';
                date_select.style.display = 'flex';
                time_select.style.display = 'flex';
                income_sec.style.display = 'none';
                income_button.style.display = 'none';
                submit_button_sec.style.display = 'block';
                form_title.innerHTML = 'Book Your Free Slot Now';
                }

                function back_submit() {
                slot_header.style.display = 'none';
                date_select.style.display = 'none';
                time_select.style.display = 'none';
                income_sec.style.display = 'block';
                income_button.style.display = 'block';
                submit_button_sec.style.display = 'none';
                form_title.innerHTML = 'Please Answer the following Questions';
                }

            </script>
            <script>
                let date1 = document.getElementById('date1');
                let date2 = document.getElementById('date2');
                let date3 = document.getElementById('date3');
                let time1 = document.getElementById('time1');
                let time2 = document.getElementById('time2');
                let time3 = document.getElementById('time3');

                let eleven = document.getElementById('eleven');
                let three = document.getElementById('three');
                let seven = document.getElementById('seven');
                let nine = document.getElementById('nine');
                let leadForm = document.getElementById('leadForm');
                let submit_button = document.getElementById('submit_button');
                const sevenPm = new Date();
                sevenPm.setHours(19);
                sevenPm.setMinutes(0);
                sevenPm.setSeconds(0);
                sevenPm.setMilliseconds(0);
                const threePm = new Date();
                threePm.setHours(15);
                threePm.setMinutes(0);
                threePm.setSeconds(0);
                threePm.setMilliseconds(0);
                const elevenAm = new Date();
                elevenAm.setHours(12);
                elevenAm.setMinutes(0);
                elevenAm.setSeconds(0);
                elevenAm.setMilliseconds(0);
                function selectDate(data) {
                eleven.classList.add('disabled');
                three.classList.add('disabled');
                seven.classList.add('disabled');
                time1.checked = false;
                time2.checked = false;
                time3.checked = false;
                time4.checked = false;
                if (data.innerHTML.trim() == 'Today') {
                date1.checked = true;
                const now = new Date();
                if (now &lt; elevenAm) {
                eleven.classList.remove('disabled');
                }
                if (now &lt; threePm) {
                three.classList.remove('disabled');
                }
                if (now &lt; sevenPm) {
                seven.classList.remove('disabled');
                }
                }
                else if (data.innerHTML.trim() == 'Tomorrow') {
                date2.checked = true;
                eleven.classList.remove('disabled');
                three.classList.remove('disabled');
                seven.classList.remove('disabled')
                }
                else {
                date3.checked = true;
                eleven.classList.remove('disabled');
                three.classList.remove('disabled');
                seven.classList.remove('disabled')
                }
                nine.classList.remove('disabled')
                document.querySelectorAll('#date_select div').forEach((link) => {
                link.classList.add('disabled');
                link.style.border = 'none';
                });
                data.classList.remove('disabled');
                data.style.border = '3px inset black';
                }
                function selectTime(data) {
                if (data.classList.contains('disabled')) {
                return
                }
                document.querySelectorAll('#time_select div').forEach((link) => {
                link.style.border = 'none';
                });
                if (data.innerHTML.trim() == '12 PM') {
                time1.checked = true;
                data.style.border = '3px inset black';
                }
                else if (data.innerHTML.trim() == '4 PM') {
                time2.checked = true;
                data.style.border = '3px inset black';
                }
                else if (data.innerHTML.trim() == '7 PM') {
                time3.checked = true;
                data.style.border = '3px inset black';
                }
                else {
                time4.checked = true;
                data.style.border = '3px inset black';
                }
                submit_button.style.display = 'inline-block';
                }
                document.querySelector('#leadForm').onsubmit = function(e) {
                e.preventDefault();
                let date = false;
                let time = false;
                if (date1.checked || date2.checked || date3.checked) {
                date = true;
                }
                if (time1.checked || time2.checked || time3.checked || time4.checked) {
                time = true;
                }
                if (date == false || time == false) {
                alert('Please Select a Slot');
                debugger;
                }
                else {
                this.submit();
                }
                }
            </script>
        </template>
    </data>
</odoo>
