                            <input type="radio" id="date1" name="date" value="today" hidden="hidden"/>
                            <input type="radio" id="date2" name="date" value="tomorrow" hidden="hidden"/>
                            <input type="radio" id="date3" name="date" value="dat" hidden="hidden"/>
                            <div class="row justify-content-around p-3" id="time_select" style="display: none;">
                                <div class="col-3 rounded-pill p-1 text-black disabled slot_select"
                                     onclick="selectTime(this)"
                                     id="eleven"
                                     style="cursor:pointer;">
                                    12 PM
                                </div>
                                <div class="col-3 rounded-pill p-1 text-black disabled slot_select"
                                     onclick="selectTime(this)"
                                     id="three"
                                     style="cursor:pointer;">
                                    4 PM
                                </div>
                                <div class="col-3 rounded-pill p-1 text-black disabled slot_select"
                                     onclick="selectTime(this)"
                                     id="seven"
                                     style="cursor:pointer;">
                                    7 PM
                                </div>
                                <div class="col-3 rounded-pill p-1 text-black disabled slot_select"
                                     onclick="selectTime(this)"
                                     id="nine"
                                     style="cursor:pointer;">
                                    9 PM
                                </div>
                            </div>
                            <input type="radio" id="time1" name="time" value="12 PM" hidden="hidden"/>
                            <input type="radio" id="time2" name="time" value="4 PM" hidden="hidden"/>
                            <input type="radio" id="time3" name="time" value="7 PM" hidden="hidden"/>
                            <input type="radio" id="time4" name="time" value="9 PM" hidden="hidden"/>
                            <div id="basic_button">
                                <span class="next_button" onclick="open_profession()">Next</span>
                            </div>
                            <div style="display: none;" id="professional_button">
                                <span class="next_button" onclick="back_income()">Back</span>
                                <span class="next_button" onclick="open_income()">Next</span>
                            </div>
                            <div style="display: none;" id="income_button">
                                <span class="next_button" onclick="back_slot()">Back</span>
                                <span class="next_button" onclick="open_slot()">Next</span>
                            </div>
                            <div style="display: none;" id="submit_button_sec">
                                <span class="next_button" onclick="back_submit()">Back</span>
                                <button type="submit" id="submit_button" style="display: none;">Register Now</button>
