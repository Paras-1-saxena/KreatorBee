                                            <span>
                                                <t t-esc="booking_data.slot_date.strftime('%A')"/>
                                            </span>
                                            <span class="june-29">
                                                <t t-esc="booking_data.slot_date.strftime('%b %d')"/>
                                            </span>
                                            <span>
                                                <t t-esc="booking_data.slot_date.strftime('%Y')"/>
                                            </span>
