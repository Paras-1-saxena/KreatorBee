<odoo>
    <data>
        <template id="nmy_courses_template" name="NMy courses Partner">
            <head>
                <!-- meta tags -->
                <meta charset="UTF-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <!-- title -->
                <title>Kreator Bee | Sales</title>
                <!-- external css -->
                <link rel="stylesheet" href="/custom_web_kreator/static/src/css/custom_styl.css"/>
                <!-- bootstrap css -->
                <link rel="stylesheet"
                      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
                <link
                        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                        rel="stylesheet"
                        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                        crossorigin="anonymous"
                />
                <!-- remix icon -->
                <link
                        href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
                        rel="stylesheet"
                />
                <style>
                    .sidebar ul li,header a {
                    font-size:17px;
                    }
                    .sidebar {
                    width:auto;
                    }
                    #unverifiedOrdersTableForCreator,
                    #visitorsTableForCreator {
                    transition: opacity 0.3s ease-in-out;
                    }

                </style>
            </head>

            <body>
                <style>

                    .course-section {
                    visibility: hidden;
                    height: 0;
                    overflow: hidden;
                    }

                    .course-section.active {
                    visibility: visible;
                    height: auto;
                    overflow: visible;
                    }

                </style>
                <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to log out?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Not Now</button>
                                <button id="confirmLogout" class="btn btn-warning">Yes, Logout</button>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    document.getElementById("confirmLogout").addEventListener("click", function() {
                    // Perform the logout by navigating to the logout URL
                    window.location.href = "/web/session/logout?redirect=/web/signup?user_type=partner";
                    });
                </script>
                <div class="layout">
                    <!-- Header -->
                    <header class="container-fluid">
                        <div
                                class="d-flex justify-content-between align-items-center border-bottom"
                        >
                            <!-- Menu Icon visible on mobile-->
                            <img
                                    class="pe-2 d-block d-lg-none hamburger"
                                    src="/custom_web_kreator/static/src/nev-icon.svg"
                            />
                            <!-- Logo -->
                            <img src="/custom_web_kreator/static/src/logo.png" style="height: 41px; width: 160px;"/>
                            <!-- Menu-->
                            <div class="d-lg-flex d-none gap-4 menu-links">
                                <div
                                        class="p-lg-2 p-1 d-flex flex-column align-items-center" id="underReviewLink"
                                        onclick="showCourseSection('underReview', this)"
                                >
                                    <a href="#" class='text-center'>
                                        <i class="fa fa-edit"></i>
                                        <p>
                                            Under Review
                                        </p>
                                    </a>
                                </div>
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center" id="approvedLink"
                                     onclick="showCourseSection('approved', this)">
                                    <a href="#" class='text-center'>
                                        <i class="fas fa-thumbs-up"></i>
                                        <p>
                                            Approved
                                        </p>
                                    </a>
                                </div>
                                <div class="p-lg-2 p-1 d-flex flex-column align-items-center" id="publishedLink"
                                     onclick="showCourseSection('published', this)">
                                    <a href="#" class='text-center'>
                                        <i class="fa fa-check-circle"></i>
                                        <p>
                                            Published
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <!-- Profile -->
                            <t t-call="custom_web_kreator.partner_profile_dropdown"/>
                        </div>
                    </header>
                    <div class="d-flex w-100">
                        <!-- Sidebar -->
                        <div class="sidebar border-end d-none d-lg-block">
                            <nav class="py-3 px-2">
                                <!-- Sidebar Menu -->
                                <ul class="d-flex flex-column gap-2">
                                    <a href="/master">
                                        <li>
                                            <i class="ri-dashboard-fill"></i>
                                            Get Started
                                        </li>
                                    </a>
                                    <a href="/creator/income">
                                        <li>
                                            <i class="ri-discount-percent-fill"></i>
                                            Sales
                                        </li>
                                    </a>
                                    <!-- Sales Dropdown -->
                                    <div class="ps-2 d-block d-lg-none">
                                        <li>
                                            <a href="/creator/income">
                                                <i
                                                        class="ri-subtract-fill"></i>
                                                Income Data
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/creator/referral">
                                                <i class="ri-subtract-fill"></i>
                                                Links
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/creator/kyc">
                                                <i class="ri-subtract-fill"></i>
                                                kyc
                                            </a>
                                        </li>
                                        <li>
                                            <i class="ri-subtract-fill"></i>
                                            <a href="/creator/lead">Lead</a>
                                        </li>
                                        <li>
                                            <a href="/creator/leaderboard">
                                                <i
                                                        class="ri-subtract-fill"></i>
                                                Leaderboard
                                            </a>
                                        </li>
                                    </div>
                                    <a href="/creator/my-courses">
                                        <li class="active">
                                            <i class="ri-product-hunt-fill"></i>
                                            Products
                                        </li>
                                    </a>
                                    <a href="/creator/community">
                                        <li>
                                            <i class="ri-user-community-fill"></i>
                                            Connect with
                                            Partner
                                        </li>
                                    </a>
                                    <a href="/creator/customer">
                                        <li>
                                            <i class="ri-user-fill"></i>
                                            Customer
                                        </li>
                                    </a>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                        <li>
                                            <i class="ri-user-community-fill"></i>
                                            Become a Bee
                                            Partner
                                        </li>
                                    </a>
                                </ul>
                            </nav>
                        </div>
                        <!-- Sidebar Backdrop on mobile -->
                        <div class="backdrop d-none d-lg-none"></div>
                        <!-- Main Content -->
                        <main class="flex-grow-1 p-4 overflow-auto" style="background-color: #fff5c6;">
                            <!-- Welcome Section -->
                            <section class="welcome">
                                <div
                                        class="d-flex gap-2 flex-column flex-lg-row align-items-lg-center justify-content-between"
                                >
                                    <h1 class="d-flex align-items-center gap-1">
                                        <img class="play"
                                             src="/custom_web_kreator/static/src/user_icon.svg"/>
                                        Welcome,
                                        <t
                                                t-esc="request.env.user.name"/>
                                    </h1>
                                    <div class="d-flex gap-3 align-items-center">
                                        <a href="#"
                                        >Tutorial
                                            <img class="ms-1"
                                                 src="/custom_web_kreator/static/src/play.png"
                                            />
                                        </a>
                                        <a
                                                href="https://wa.me/+919289384910" target="_blank" class="text-center"
                                        >
                                            <img
                                                    src="/custom_web_kreator/static/src/Whatsapp.png"
                                            />
                                            +91 9289384910
                                            <br/>
                                            <div style="font-size: 10px;">
                                                9:30 AM to 6:00 PM (Except Sundays)
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </section>
                            <!-- Lead Details -->
                            <div class="container">
                                <div class="row course-section my-4" id="myCourses" >
                                    <div class="col-12">
                                        <h4>ALL Courses</h4>
                                    </div>
                                    <t t-if="all_courses">
                                        <t t-foreach="all_courses" t-as="course">
                                            <div class="col-md-3 mb-4 p-1">
                                                <div class="card text-center p-2"
                                                     style="width: 100%; max-width: 364px; margin: auto;">
                                                    <a t-att-href="'/landing_page?course_id=' + str(course.id)"
                                                       style="text-decoration: none; color: inherit;">
                                                        <img t-att-src="image_data_uri(course.image_1920) if course.image_1920 else '/custom_web_kreator/static/src/thumbnail.png'"
                                                             alt="Course Thumbnail"
                                                             style="width: 100%; height: 198px; object-fit: cover; display: block; margin: 0 auto;"/>
                                                        <h6 class="mt-3">
                                                            <t t-esc="course.name"/>
                                                        </h6>
                                                    </a>
                                                    <div style="display: flex; justify-content: space-between; align-items: center;">
                                                        <a t-att-href="'/creator/edit-landing-page?course_id=' + str(course.id)"
                                                           class="btn btn-warning mt-3 mb-1" style="font-size: 14px;">
                                                            Edit
                                                            Landing page
                                                        </a>
                                                        <a t-att-href="'/web#id=%d&amp;model=slide.channel&amp;view_type=form' % course.id"
                                                           class="btn btn-warning mt-3 mb-1" style="font-size: 14px;">
                                                            Edit
                                                            Course
                                                        </a>
                                                    </div>

                                                </div>
                                            </div>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <p>No courses found for the creator.</p>
                                    </t>
                                </div>

                                <!-- Under Review Courses Section -->
                                <div class="row course-section" id="underReview">
                                    <div class="col-12">
                                        <div>
                                            <h4 style="float:left">Course Under Review</h4>
                                            <a href="/creator/course_detail">
                                                <button style="float:right" class="p-1 rounded bg-black text-white">Create New Course</button>
                                            </a>
                                        </div>

                                    </div>
                                    <t t-if="under_review_courses">
                                        <t t-foreach="under_review_courses" t-as="course">
                                            <div class="col-md-3 mb-4 p-1">
                                                <div class="card text-center p-2"
                                                     style="width: 90%; max-width: 364px; margin: auto;">


                                                    <img t-att-src="image_data_uri(course.image_1920) if course.image_1920 else '/custom_web_kreator/static/src/thumbnail.png'"
                                                         alt="Course Thumbnail"
                                                         style="width: 100%; height: 198px; object-fit: cover; display: block; margin: 0 auto;"/>
                                                    <h6 class="mt-3">
                                                        <t t-esc="course.name"/>
                                                    </h6>


                                                </div>
                                            </div>

                                        </t>
                                    </t>
                                    <t t-else="">
                                        <p>No under review courses found.</p>
                                    </t>
                                </div>

                                <!-- Published Courses Section -->
                                <div class="row course-section" id="published">
                                    <div class="col-12">
                                        <h4>Published Courses</h4>
                                    </div>
                                    <t t-if="published_courses">
                                        <t t-foreach="published_courses" t-as="course">
                                            <div class="col-md-3 mb-4 p-1">
                                                <div class="card text-center p-2"
                                                     style="width: 90%; max-width: 364px; margin: auto;">

                                                    <a t-att-href="'/landing_page?course_id=' + str(course.id)"
                                                       style="text-decoration: none; color: inherit;">
                                                        <img t-att-src="image_data_uri(course.image_1920) if course.image_1920 else '/custom_web_kreator/static/src/thumbnail.png'"
                                                             alt="Course Thumbnail"
                                                             style="width: 100%; height: 198px; object-fit: cover; display: block; margin: 0 auto;"/>
                                                        <h6 class="mt-3">
                                                            <t t-esc="course.name"/>
                                                        </h6>
                                                    </a>
                                                    <!-- View Now button -->


                                                </div>
                                                <div style="display: flex; justify-content: space-around; align-items: center;">
                                                        <a t-att-href="'/creator/edit-landing-page?course_id=' + str(course.id)"
                                                           class="btn btn-warning mt-3 mb-1" style="font-size: 14px;">
                                                            Edit
                                                            Landing page
                                                        </a>
                                                        <a t-att-href="'/web#id=%d&amp;model=slide.channel&amp;view_type=form' % course.id"
                                                           class="btn btn-warning mt-3 mb-1" style="font-size: 14px;">
                                                            Edit
                                                            Course
                                                        </a>
                                                    </div>
                                            </div>

                                        </t>
                                    </t>
                                    <t t-else="">
                                        <p>No published courses found.</p>
                                    </t>
                                </div>

                                <!-- Approved Courses Section -->
                                <div class="row course-section" id="approved">
                                    <div class="col-12">
                                        <h4>Approved Courses</h4>
                                    </div>
                                    <t t-if="approved_courses">
                                        <t t-foreach="approved_courses" t-as="course">
                                            <div class="col-md-3 mb-4 p-1">
                                                <div class="card text-center p-2"
                                                     style="width: 90%; max-width: 364px; margin: auto;">
                                                    <!-- Display course image -->

                                                    <img t-att-src="image_data_uri(course.image_1920) if course.image_1920 else '/custom_web_kreator/static/src/thumbnail.png'"
                                                         alt="Course Thumbnail"
                                                         style="width: 100%; height: 198px; object-fit: cover; display: block; margin: 0 auto;"/>
                                                    <h6 class="mt-3">
                                                        <t t-esc="course.name"/>
                                                    </h6>

                                                    <!-- View Now button -->

                                                </div>
                                                <div style="display: flex; justify-content: space-around">
                                                        <a t-att-href="'/creator/landing-page?course_id=' + str(course.id)"
                                                           class="btn btn-warning mt-3 mb-1" style="font-size: 14px;">
                                                            Create Landing page
                                                        </a>
                                                    </div>
                                            </div>

                                        </t>
                                    </t>
                                    <t t-else="">
                                        <p>No approved courses found.</p>
                                    </t>
                                </div>
                            </div>

                        </main>
                    </div>

                    <!-- External Script -->
                    <script src="/custom_web_kreator/static/src/js/script.js"></script>
                    <!-- bootstrap script -->
                    <script
                            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                            crossorigin="anonymous"
                    ></script>
                    <script type="text/javascript">
                        function showCourseSection(section, linkElement) {
                        // Hide all sections by removing 'active' class
                        document.querySelectorAll('.course-section').forEach((el) => {
                        el.classList.remove('active');
                        });

                        // Show the selected section
                        document.getElementById(section).classList.add('active');

                        // Remove 'active' class from all top menu links
                        document.querySelectorAll('.menu-links div').forEach((link) => {
                        link.classList.remove('active');
                        });

                        // Add 'active' class to the clicked link
                        linkElement.classList.add('active');
                        }

                        // Set "Under Review" as default selected tab
                        document.addEventListener("DOMContentLoaded", function() {
                        showCourseSection('underReview', document.getElementById('underReviewLink'));
                        });
                    </script>
                </div>
            </body>
        </template>
    </data>
</odoo>
