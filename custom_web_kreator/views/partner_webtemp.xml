                    <!-- Sidebar and Main Content -->
                    <div class="d-flex">
                        <!-- Sidebar Menu -->
                        <nav class="navbar navbar-expand-lg navbar-light sidebar">
                            <div class="offcanvas-body sidebar-menu">
                                <ul class="navbar-nav flex-column">
                                   
