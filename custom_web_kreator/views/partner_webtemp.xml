<odoo>
    <data>
        <template id="partner_webtemp" name="Partner WebTemplate">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
             <t t-call="website.layout">
                <t t-set="website_structure" t-value="True"/>

                <style>
/* General Fixes */
.header.o_main_header, footer, .o_we_header_navbar, .o_we_footer {
    display: none !important;
}
#o_main_nav {
    display: none !important;
}
.custom-page {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Sidebar Styling */
.sidebar {
    width: 250px;
    border-right: 1px solid #ddd;
    height: 100vh;
    flex-shrink: 0;
    position: relative;
    padding:15px;
}

.sidebar-menu {
    width: 250px;
    height: 100%;
    overflow-y: auto;
    background-color: #fff;
    color:#333;
    font-weight:600;

}

.sidebar .nav-link {
    display: flex;
    align-items: center;
    padding: 10px 15px;
    color: #333;
    font-size: 16px;
    text-decoration: none;


}

.sidebar .nav-link i {
    margin-right: 10px; /* Space between icon and text */
    font-size: 20px;
    color: #333;
}

.sidebar .nav-link:hover {
    background-color: #fdf5c5;
    color: #000;
}

.sidebar .nav-link:hover i {
    color: #000;
}

/* Top Menu Styling */
.navbar-brand img {
    vertical-align: middle;
    height: 60px;
    width: auto;
}

.top-menu .navbar-nav {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-left: 320px;
}

.top-menu .navbar-nav .nav-item .nav-link {
    display: flex;
    flex-direction: column; /* Icon on top, text below */
    align-items: center; /* Center icon and text horizontally */
    justify-content: center; /* Center icon and text vertically */
    padding: 10px; /* Add padding for larger hover area */
    text-align: center;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    color: #333;
    transition: background-color 0.3s, color 0.3s; /* Smooth hover transition */
    border-radius: 5px; /* Optional: Rounded corners for hover */
}

.top-menu .navbar-nav .nav-item .nav-link i {
    font-size: 20px; /* Icon size */
    margin-bottom: 5px; /* Space between icon and text */
    color: #333; /* Default icon color */
    transition: color 0.3s; /* Smooth hover transition for icon */
}

.top-menu .navbar-nav .nav-item .nav-link:hover {
    background-color: #fdf5c5; /* Highlight entire menu item */
    color: #000; /* Text color on hover */
}

.top-menu .navbar-nav .nav-item .nav-link:hover i {
    color: #000; /* Icon color on hover */
}


.user-icon img {
    border-radius: 50%;
}

/* Main Content Styling */
.main-content {
    flex-grow: 1;
    overflow: auto;
    padding: 20px;
    background-color: #f8f9fa;
}

#wrap.oe_structure.oe_empty {
    border: 2px dashed #ddd; /* Highlight editable area */
    min-height: 300px;
    padding: 20px;
}

.main-content h1 {
    font-size: 36px;
    color: #333;
}

.main-content p {
    font-size: 18px;
    color: #666;
    margin-top: 10px;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .sidebar {
        display: none; /* Hide sidebar on smaller screens */
    }
    .sidebar-menu {
        width: 100%;
    }
    .top-menu .navbar-nav {
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }
}
</style>


