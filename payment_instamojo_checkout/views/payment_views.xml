<odoo>
    <record id="acquirer_form_instamojo_checkout" model="ir.ui.view">
        <field name="name">acquirer.form.instamojo.checkout</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible = "code != 'instamojo_checkout'" >
                    <field name="instamojo_client_id" password="True" />
                    <field name="instamojo_client_secret" password="True" />
                    <div>
                        <a href="https://www.instamojo.com/accounts/register" class="oe_link" target="_blank">
                            <i class="fa fa-arrow-right"/> Get your Instamojo account
                        </a>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
