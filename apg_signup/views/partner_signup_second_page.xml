<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="partner_signup_second_page" name="Signup Second page partner">
            <meta charset="UTF-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty" style="background-color: #FFD000;">
                    <div class="container" id="main_signup">
                        <div class="o-cust-signup" style="max-width: 673px !important;">
                            <form action="/sign-up/about/update" method="post" name="signup_details"
                                  class="o-cust-signup-details-form" enctype="multipart/form-data">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="partner_id" t-att-value="partner_id" id="partner_id"
                                       class="f14 o-cust-form-control"/>

                                <!-- Header -->
                                <div class="mt-3" style="text-align: center;">
                                    <h3 class="freedomMainTitle bold-text">We would love to know you better!</h3>
                                </div>

                                <!-- Full Name -->
                                <div class="full-name">
                                    <label for="full_name" class="mb-1">Full Name
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-name o-cust-div">
                                        <input type="text" name="full_name" id="full_name" t-att-value="full_name"
                                               class="f14 o-cust-form-control" placeholder="Enter Full Name"
                                               required="required"/>
                                    </div>
                                </div>

                                <!--                                country-->

                                <div class="country" style="display: none;">
                                    <label for="country" class="mb-1">Country
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-name o-cust-div">
                                        <select name="country" id="country" class="form-select" disabled="disabled">
                                            <t t-foreach="countries" t-as="country">
                                                <option t-att-value="country.id"
                                                        t-att-selected="'selected' if country.id == default_country_id else None">
                                                    <t t-esc="country.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>


                                <!-- State Selection (Dropdown) -->
                                <div class="state">
                                    <label for="state" class="mb-1">State
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-name o-cust-div">
                                        <select name="state" id="state" class="form-select" required="required">
                                            <option value="" selected="selected" disabled="disabled">Select State
                                            </option>
                                            <t t-foreach="states" t-as="state">
                                                <option t-att-value="state.id">
                                                    <t t-esc="state.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>

                                <!-- City -->
                                <div class="city">
                                    <label for="city" class="mb-1">City
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-name o-cust-div">
                                        <input type="text" name="city" id="city" class="f14 o-cust-form-control"
                                               placeholder="Enter your City Name" required="required"/>
                                    </div>
                                </div>


                                <!-- Reference (Changed to Text Field) -->
                                <div class="refrence">
                                    <label for="reference" class="mb-1">Where did you hear about Kreator Bee
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-name o-cust-div">
                                        <select id="reference" name="reference"
                                                class="form-select form-control-lg f14 o-cust-form-control"
                                                onchange="getOption()">
                                            <t t-foreach="request.env['res.partner'].fields_get(['reference'])['reference']['selection']"
                                               t-as="option">
                                                <option t-att-value="option[0]"
                                                        t-att-selected="option[0] == (partner.reference if partner else '')">
                                                    <t t-esc="option[1]"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div class="full-name" id="specify_block" style="display: none;">
                                    <label for="specify" class="mb-1">Please Specify
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-name o-cust-div">
                                        <input type="text" name="specify" id="specify" t-att-value="specify"
                                               class="f14 o-cust-form-control"
                                               placeholder="Where did you hear about us?"/>
                                    </div>
                                </div>
                                <script>
                                    function getOption() {
                                    if (document.getElementById('reference').value == 'other') {
                                    document.getElementById('specify_block').style.display = 'block';
                                    document.getElementById('specify').setAttribute("required", "required");
                                    } else {
                                    document.getElementById('specify_block').style.display = 'none';
                                    document.getElementById('specify').removeAttribute("required");
                                    }
                                    }
                                </script>


                                <!-- Submit Button -->
                                <div id="div_registration_btn mt-5">
                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-primary o-cust-reg-button"
                                                onclick="waitingPage()">Complete
                                            Registration
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row d-none justify-content-around" id="signup_waiting">
                    <div class="col-10 col-md-4">
                        <dotlottie-player
                                src="https://lottie.host/a8888e57-58b0-4af5-a1fa-f06d80dccb6f/k0qb5XCOoR.lottie"
                                background="transparent"
                                speed="1"
                                style="width: 100%; height: auto"
                                loop='true'
                                autoplay='true'
                        ></dotlottie-player>
                    </div>
                    <div class="col-12 text-center mb-4">
                        <span class="fs-4">
                            <u>Please Wait While we set up you Dashboard</u>
                        </span>
                    </div>
                </div>
            </t>
            <script src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module">
            </script>
            <script>
                function waitingPage() {
                const main_section = document.getElementById('main_signup');
                const waiting_section = document.getElementById('signup_waiting');
                main_section.classList.add('d-none');
                signup_waiting.classList.remove('d-none');
                signup_waiting.classList.add('d-flex');
                }
            </script>
        </template>
    </data>
</odoo>
