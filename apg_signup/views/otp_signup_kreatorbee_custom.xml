<odoo>
    <template id="otp_signup_Kreatorbee_custom" name="Sign up">
        <style>
            input[type=number] {
            -moz-appearance: textfield;
            }
            input::-webkit-outer-spin-button,
            input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
            }
        </style>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <t t-call="website.layout">
            <div id="wrap" class="row justify-content-around" style="background-image: linear-gradient(74deg, #EDFFF3 0%, #ECF9FF 100%)">
                <div class="col-lg-4 col-md-4 col-sm-12" id="main_signup">
                    <div class="o-cust-signup">
                        <form role="form" method="post" name="login" class="o-cust-signup-form"
                              enctype="multipart/form-data">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="text-center c_signup_logo">
                                <a href="/">
                                    <img src="/apg_signup/static/src/img/kreator_signup.webp" style="width: 155px;"
                                         alt="Logo"/>
                                </a>

                            </div>
                            <div class="m-1">
                                <div class="user-type" style="display:none;">
                                    <label for="user_type" class="mb-1">User Type</label>
                                    <div class="mb-2 field-user_type o-cust-div">

                                        <select name="user_type" id="user_type" class="o-cust-form-control"
                                                required="required">
                                            <option t-att-selected="'creator' == user_type" value="creator">
                                                Creator
                                            </option>
                                            <option t-att-selected="'partner' == user_type" value="partner">
                                                Partner
                                            </option>
                                            <option t-att-selected="'customer' == user_type" value="customer">
                                                Customer
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="user-name">
                                    <label for="name" class="mb-1">Name
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-name o-cust-div">
                                        <input type="text" name="name" t-att-value="name" id="name"
                                               class="f14 o-cust-form-control" placeholder="Enter your Full Name"
                                               required="required"
                                               t-att-readonly="'readonly' if only_passwords else None"
                                               t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                                    </div>
                                </div>
                                <div class="user-login">
                                    <label for="login" class="mb-1">Email
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-login o-cust-div">
                                        <input type="text" name="login" t-att-value="login" id="login"
                                               class="f14 o-cust-form-control" autofocus="autofocus"
                                               required="required" autocapitalize="off"
                                               placeholder="Enter your Email Address"/>
                                    </div>
                                </div>
                                <div class="user-phone">
                                    <label for="phone" class="mb-1">Mobile
                                        <span style="color: red;">*</span>
                                    </label>
                                    <div class="mb-2 field-phone o-cust-div"
                                         style="align-items: center; display: flex;">
                                        <!-- Flag and country code select button -->
                                        <div class="ReactFlagsSelect-module_flagsSelect__2pfa2 countryFlag"
                                             id="flags-select" data-testid="rfs" style="width: 15%;">
                                            <button id="rfs-btn" type="button"
                                                    class="ReactFlagsSelect-module_selectBtn__19wW7 flag-button o_o2m"
                                                    aria-labelledby="rfs-btn" aria-haspopup="listbox"
                                                    aria-expanded="false" data-testid="rfs-btn"
                                                    style="background-color: #ffffff;border: 0px;">
                                                <span class="ReactFlagsSelect-module_selectValue__152eS">
                                                    <span class="ReactFlagsSelect-module_selectFlag__2q5gC o-cust-mobile"
                                                          data-testid="rfs-selected-flag">
                                                        <!-- Indian Flag SVG -->
                                                        <svg width="1em" height="1em" viewBox="0 0 512 336"
                                                             xmlns="http://www.w3.org/2000/svg">
                                                            <g fill="none">
                                                                <path d="M512.001 112.092H0V9.103A8.829 8.829 0 018.828.275h494.345a8.829 8.829 0 018.828 8.828v102.989z"
                                                                      fill="#FAB446"></path>
                                                                <path d="M503.172 335.724H8.828A8.829 8.829 0 010 326.896V223.908h512v102.988a8.828 8.828 0 01-8.828 8.828z"
                                                                      fill="#73AF00"></path>
                                                                <path fill="#F5F5F5"
                                                                      d="M0 112.088h512V223.9H0z"></path>
                                                                <g transform="translate(208 120)"
                                                                   fill="#41479B">
                                                                    <path d="M48 95.448C21.836 95.448.552 74.164.552 48S21.836.552 48 .552 95.448 21.836 95.448 48 74.164 95.448 48 95.448zm0-86.069C26.702 9.379 9.379 26.702 9.379 48c0 21.298 17.323 38.621 38.621 38.621 21.298 0 38.621-17.323 38.621-38.621C86.621 26.702 69.298 9.379 48 9.379z"></path>
                                                                </g>
                                                            </g>
                                                        </svg>
                                                    </span>
                                                    <span style="font-size: 14px;"
                                                          class="ReactFlagsSelect-module_secondaryLabel__37t1D">
                                                        +91
                                                    </span>
                                                </span>
                                            </button>
                                        </div>
                                        <!-- Phone input field -->
                                        <input type="text" name="phone" t-att-value="phone" id="phone"
                                               class="f14 o-cust-form-control" style="width: 60%;"
                                               maxlength="10" autofocus="autofocus" autocapitalize="off"
                                               required="required" placeholder="Enter your Phone Number"
                                               t-att-readonly="'readonly' if only_passwords else None"/>
                                        <div id="div_generate_otp"
                                             class="d-flex justify-content-end o-cust-otp-button">
                                            <a role="button" id="get_otp"
                                               style="text-decoration: none; background-color:#EDFFF3; border: 1px solid black; padding: 4px; border-radius: 25px;">Send OTP
                                            </a>
                                        </div>
                                        <div id="div_otp_verified"
                                             class="d-flex justify-content-end o-cust-right o-cust-hide">
                                            <img src="/apg_signup/static/src/img/check-mark.png"
                                                 style="width: 26%;float: right;" alt="Verified"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="user-password" style="display:none;">
                                    <label for="password" class="mb-1">Password</label>
                                    <div class="mb-2 field-password o-cust-div">
                                        <input type="password" name="password" id="password"
                                               class="f14 o-cust-form-control"
                                               t-att-autofocus="'autofocus' if only_passwords else None"
                                               value="1234"/>
                                    </div>
                                </div>
                                <div class="user-password" style="display:none;">
                                    <label for="confirm_password">Confirm Password</label>
                                    <div class="mb-2 field-confirm-password o-cust-div">
                                        <input type="password" name="confirm_password" id="confirm_password"
                                               class="f14 o-cust-form-control" value="1234"/>
                                    </div>
                                </div>

                                <!-- OTP Form -->
                                <div id="div_otp" class="otp-container">
                                    <div id="otpForm" name="OTP_Verification"
                                         class="o-cust-otp-verification mt-3">
                                        <!-- <form id="otpForm" action="/otp/verification" method="post" name="OTP_Verification" class="o-cust-otp-verification m-1" enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/> -->
                                        <div class="otp-inputs">
                                            <input type="number" maxlength="1" class="otp-input f14" id="otp_1"
                                                   name="otp_1"
                                                   oninput="if(this.value.length > 1) this.value = this.value.slice(0, 1);"/>
                                            <input type="number" maxlength="1" class="otp-input f14" id="otp_2"
                                                   name="otp_2"
                                                   oninput="if(this.value.length > 1) this.value = this.value.slice(0, 1);"/>
                                            <input type="number" maxlength="1" class="otp-input f14" id="otp_3"
                                                   name="otp_3"
                                                   oninput="if(this.value.length > 1) this.value = this.value.slice(0, 1);"/>
                                            <input type="number" maxlength="1" class="otp-input f14" id="otp_4"
                                                   name="otp_4"
                                                   oninput="if(this.value.length > 1) this.value = this.value.slice(0, 1);"/>
                                            <input type="number" maxlength="1" class="otp-input f14" id="otp_5"
                                                   name="otp_5"
                                                   oninput="if(this.value.length > 1) this.value = this.value.slice(0, 1);"/>
                                            <input type="number" maxlength="1" class="otp-input f14" id="otp_6"
                                                   name="otp_6"
                                                   oninput="if(this.value.length > 1) this.value = this.value.slice(0, 1);"/>
                                            <a role="button" id="get_otp" class="otp-verify" style="text-decoration: none; background-color:#EDFFF3; border: 1px solid black; padding: 4px; border-radius: 25px;">Verify</a>
                                        </div>
                                    </div>
                                    <p class="mt-2 f14">
                                        Didn't receive the code?
                                        <a role="button" class="o-link o-cust-resend-otp">Resend</a>
                                    </p>
                                </div>

                                <div id="div_signup" class="o-cust-signup-button" style="display: none;">
                                    <div class="mb-2 o-cust-div" style="margin-top: 20px !important;">
                                        <button type="submit" class="btn" onclick="waitingPage()"
                                                id="submit_button _onSubmit_cus" style="width:100%; background-color: #cdf2d9!important;">Sign up
                                        </button>
                                    </div>
                                </div>
                                <div id="div_signup_disable" class="o-cust-signup-button"
                                     style="pointer-events: none;">
                                    <div class="mb-2 o-cust-div" style="margin-top: 20px !important;">
                                        <a class="btn btn-primary"
                                           style="width:100%; background-color: #808080; color: white; border: 1px solid #808080; ">Sign up
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>


                        <div id="o_signin_div" class="text-center f14">
                            <span>
                                Already have an account?
                                <a t-attf-href="/web/login?{{ keep_query() }}" class="o-link" role="button">Sign
                                    in
                                </a>
                            </span>
                            <div class="o_login_auth"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row d-none justify-content-around" id="signup_waiting">
                <div class="col-10 col-md-4">
                    <dotlottie-player
                            src="https://lottie.host/c58d84ed-1980-4f34-9678-aec0484a91fd/3Ra3iWgYV2.lottie"
                            background="transparent"
                            speed="1"
                            style="width: 100%; height: auto" loop='true' autoplay='true'></dotlottie-player>
                </div>
                <div class="col-12 text-center mb-4">
                    <span class="fs-4"><u>Please Wait while we are setting up your profile</u></span>
                </div>
            </div>
        </t>
        <script src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module">
        </script>
        <script>
            function waitingPage() {
            const main_section = document.getElementById('main_signup');
            const waiting_section = document.getElementById('signup_waiting');
            main_section.classList.add('d-none');
            signup_waiting.classList.remove('d-none');
            signup_waiting.classList.add('d-flex');
            }
        </script>
    </template>
    <!-- Pop-up template -->
    <template id="popup_template" name="Responsive Popup">
        <div id="popup-overlay" class="popup-overlay" style="display: none;">
            <div class="popup-content">
                <span class="close-btn">X</span>
                <div class="popup-body">
                    <!-- Your Popup Content Here -->
                    <!-- <h2>Popup Title</h2> -->
                    <p>Please enter valid phone number.</p>
                </div>
            </div>
        </div>
    </template>
</odoo>


